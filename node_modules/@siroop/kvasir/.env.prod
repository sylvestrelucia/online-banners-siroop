# -----------------------------------------------------------------------------
# Webpack
# -----------------------------------------------------------------------------

# Mode
WEBPACK_MODE=production

# Babili minifier
WEBPACK_BABILI_PLUGIN=true

# Devtool (eval-source-map for test/dev or cheap-module-source-map for prod)
WEBPACK_DEVTOOL=false

# Sourcemap (tests)
WEBPACK_SOURCEMAP_DEVTOOL_PLUGIN=false

# Istanbul loeader (tests)
WEBPACK_ISTANBUL_INSTRUMENT_LOADER=false

# -----------------------------------------------------------------------------
# JS
# -----------------------------------------------------------------------------

# Minify JS
JS_MINIFY=true

# Lint fail on error
JS_LINT_FAIL_ON_ERROR=false

# -----------------------------------------------------------------------------
# CSS
# -----------------------------------------------------------------------------

# Lint fail on error
CSS_LINT_FAIL_ON_ERROR=false

# SCSS Sourcemaps
CSS_SOURCEMAPS=false

# CSS minify
CSS_MINIFY=true

# Kasir prefix
CSS_KVASIR_PREFIX=false
