<div class="o-list-footer{% if modifier %} o-list-footer--{{ modifier }}{% endif %}" data-c-name="ListFooter">
	<div class="o-list-footer__pagination">
		{% include '@m-pagination' with { data: data.pagination } %}
	</div>

	<div class="o-list-footer__count">{{ data.count }}</div>

	<div class="o-list-footer__number-of-items">
		<span class="o-list-footer__number-of-items-text">Pro Seite</span>
		{% include '@m-dropdown' with { data: data.numberOfItems } %}

		<noscript class="o-list-footer__number-of-items-submit">
			<button class="o-list-footer__number-of-items-button" type="submit">{{ data.numberOfItems.apply }}</button>
		</noscript>
	</div>
</div>
