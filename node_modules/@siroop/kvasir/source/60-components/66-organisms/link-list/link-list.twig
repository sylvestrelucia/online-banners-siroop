<div class="o-link-list{% if modifier %} o-link-list--{{ modifier }}{% endif %}">
	<div class="o-link-list__container">
		{% for item in data.items %}
			<a class="o-link-list__item" href="{{ item.url }}">
				<span class="o-link-list__title">
					{{ item.name|raw }}
				</span>

				<span class="o-link-list__icon">
				{% include "@a-svg-icon" with {
				modifiers: ['small', 'stroked-thin'],
				data: {
				name: 'arrow-right'
				}
				} %}
				</span>
			</a>
		{% endfor %}
	</div>
</div>
