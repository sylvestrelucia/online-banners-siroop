<div class="o-wishlist-list-list{% if modifier %} o-wishlist-list--{{modifier}}{% endif %}" data-c-name="WishlistList">
	{% if data.products|length > 1 %}
		<ul class="o-wishlist-list__list">
			{% for product in data.products %}
			<li class="o-wishlist-list__item">
				<div class="o-wishlist-list__product">

					<div class="o-wishlist-list__info">
						{% if product.images|default %}
						<div class="o-wishlist-list__image">
							<a class="o-wishlist-list__image-link" href="{{ product.url }}">
								{% include '@m-image-responsive' with {data: product.images[0]} %}
							</a>
						</div>
						{% endif %}

						<div class="o-wishlist-list__desc">
							{% if product.title|default %}
								<a class="o-wishlist-list__title-link" href="{{ product.url }}">
									<h3 class="o-wishlist-list__title">{{ product.title }}</h3>
								</a>
							{% endif %}
							<div class="o-wishlist-list__price">
								{% if product.availability.maxValue > 0 %}
									{% if product.price.priceDiscount|default %}
										{% set priceModifier = 'striked m-price--small' %}
									{% endif %}
									{% include '@m-price' with {
										data: {
											priceCurrency: product.price.priceCurrency,
											priceValue: product.price.priceValue,
										},
										modifier: priceModifier
									} %}
									{% if product.price.priceDiscount|default %}
										{% include '@m-price' with {
											data: {
												priceCurrency: product.price.priceCurrency,
												priceValue: product.price.priceDiscount,
											},
											modifier: 'reduced'
										} %}
									{% endif %}
								{% else %}
									<div class="o-wishlist-list__stock-status">
										{{ product.stockStatus }}
									</div>
								{% endif %}
							</div>
						</div>
					</div>

					<div class="o-wishlist-list__action">
						<button class="o-wishlist-list__button">
							{{ data.addToCart }}
							{% include '@a-svg-icon' with {
								modifiers: ['stroked', 'medium'], data: { name: 'basket-add' }
							} %}
						</button>
					</div>

					<button class="o-wishlist-list__remove" type="button">
						<span class="o-wishlist-list__remove-icon">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked', 'small'], data: { name: 'trash' }
							} %}
						</span>
					</button>

				</div>
			</li>
			{% endfor %}
		</ul>
	{% else %}
		
	{% endif %}
</div>
