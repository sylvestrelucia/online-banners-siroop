<div class="o-price-slider{% if modifier %} o-price-slider--{{ modifier}}{% endif %}" data-c-name="PriceSlider">
	<div class="o-price-slider__row">
		<div class="o-price-slider__row-col-1">
			<div class="o-price-slider__input-wrap">
				<span class="o-price-slider__input-currency">{{ data.currency }}</span>
				<input aria-label="{{ data.label.from }}" id="o-price-slider-input-min-{{ data.id }}" type="number" class="o-price-slider__input-min-value js-o-price-slider__input-min-value" value="{{ data.start.min }}" data-range-min="{{ data.range.min }}"/>
			</div>
		</div>
		<div class="o-price-slider__row-col-2">
			<div class="o-price-slider__input-wrap">
				<span class="o-price-slider__input-currency">{{ data.currency }}</span>
				<input aria-label="{{ data.label.to }}" id="o-price-slider-input-max-{{ data.id }}" type="number" class="o-price-slider__input-max-value js-o-price-slider__input-max-value" value="{{ data.start.max }}" data-range-max="{{ data.range.max }}"/>
			</div>
		</div>
	</div>
	<div class="o-price-slider__script js-o-price-slider__script"></div>
</div>
