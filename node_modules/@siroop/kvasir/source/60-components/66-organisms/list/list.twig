<div class="o-list{% if modifier %} o-list--{{ modifier }}{% endif %}" data-c-name="List">
	<ul class="o-list__list">
		{% for item in data.items %}
			<li class="o-list__item{% if data.showMoreItems %} {{ data.showMoreItems }}{% endif %}">
				<div class="o-list__item-wrap">
					{% include '@m-list-item' with { data: item, modifier: data.modifierListItem } %}
				</div>
			</li>
		{% endfor %}
	</ul>
	{% if data.moreUrl|default %}
		<div class="o-list__link">
			<a class="o-list__link-more" href="{{data.moreUrl}}">
				{{ data.moreUrlLabel }}
				{% include '@a-svg-icon' with {
					modifiers: ['small', 'rounded'],
					data: {
						name: 'arrow-right'
					}
				} %}
			</a>
		</div>
	{% endif %}
</div>
