{% include '@a-svg-sprite--payment' %}

<div id="o-cart-aside" class="o-cart-aside js-o-cart-aside{% if modifier %} o-cart-aside--{{ modifier }}{% endif %}" data-c-name="CartAside">

	<div class="o-cart-aside__authentication-buttons">
		{% include '@m-cart-auth' with { data: data.auth } %}
	</div>

	<div class="o-cart-aside__delivery">
		<div class="o-cart-aside__delivery-information">
			<span class="o-cart-aside__delivery-information-label">{{ data.deliveryInformationLabel }}</span>
		</div>

		<div class="o-cart-aside__delivery-disclaimer">{{ data.deliveryDisclaimer }}</div>
	</div>

	<div class="o-cart-aside__payment">

		<div class="o-cart-aside__payment-title">{{ data.paymentMethod }}</div>

		<div class="o-cart-aside__payment-method-list">
			<div class="o-cart-aside__payment-method-item">
				<svg class="mat-svg__svg o-cart-aside__payment-method-icon">
					<use xlink:href="#visa-colored"></use>
				</svg>
			</div>
			<div class="o-cart-aside__payment-method-item">
				<svg class="mat-svg__svg o-cart-aside__payment-method-icon">
					<use xlink:href="#mastercard-colored"></use>
				</svg>
			</div>
			<div class="o-cart-aside__payment-method-item">
				<svg class="mat-svg__svg o-cart-aside__payment-method-icon">
					<use xlink:href="#postfinance-colored"></use>
				</svg>
			</div>
			<div class="o-cart-aside__payment-method-item">
				<svg class="mat-svg__svg o-cart-aside__payment-method-icon">
					<use xlink:href="#amex-colored"></use>
				</svg>
			</div>
			<div class="o-cart-aside__payment-method-item">
				<svg class="mat-svg__svg o-cart-aside__payment-method-icon">
					<use xlink:href="#bulletin-colored"></use>
				</svg>
			</div>
		</div>

	</div>

</div>
