<div class="o-pill-list{% if modifier %} o-pill-list--{{ modifier}}{% endif %}">
	{% if data.title %}
		<h2 class="o-pill-list__title">
			{{ data.title }}
		</h2>
	{% endif %}

	{% for item in data.items %}
		<button class="o-pill-list__item a-pill a-pill--small a-pill--{{ item.modifier }}">{{ item.text }}</button>
	{% endfor %}
</div>
