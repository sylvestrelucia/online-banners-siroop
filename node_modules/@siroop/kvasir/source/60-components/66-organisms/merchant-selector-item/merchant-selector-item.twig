<a href="#{{ data.id }}" class="m-merchant-selector-item{% if modifier %} m-merchant-selector-item--{{ modifier }}{% endif %}" data-c-name="MerchantSelectorItem">
	<div class="m-merchant-selector-item__radio m-merchant-selector-item__radio{% if data.selected|default %}--checked{% else %}--unchecked{% endif %}">
		<span class="m-merchant-selector-item__radio-icon">
			{% if data.selected|default %}
				{% include '@a-svg-icon' with {
					data: {
						name: 'radio-checked'
					},
					modifiers: ['medium', 'stroked-thin']
				} %}
			{% else %}
				{% include '@a-svg-icon' with {
					data: {
						name: 'radio-unchecked'
					},
					modifiers: ['medium', 'stroked-thin']
				} %}
			{% endif %}
		</span>
		<span class="m-merchant-selector-item__label">{{ data.name }}</span>
	</div>
	<div class="m-merchant-selector-item__content">
		<div class="m-merchant-selector-item__desc">
			<div class="m-merchant-selector-item__merchant">
				<div class="m-merchant-selector-item__merchant-name">
					{{ data.name }}
				</div>
			</div>
			<div class="m-merchant-selector-item__delivery-duration">
				{% include "@a-svg-icon" with {
					modifiers: ['default', 'stroked-thin'],
					data: {
						name: data.shipping.icon
					}
				}%}
				{{ data.shipping.text|raw }}
				{% if data.shipping.type == 'haulier' %}
					<span data-tooltip="{{ data.shipping.tooltip | raw }}">
						{% include '@a-svg-icon' with {
							modifiers: ['stroked', 'small'],
							data: { name: 'info-filled' }
						} %}
					</span>
				{% endif %}
			</div>
		</div>
		<div class="m-merchant-selector-item__costs">
			<div class="m-merchant-selector-item__price">
				{% include "@m-price" with {
					modifier: 'default',
					data: {
						priceFrom: '',
						priceCurrency: data.price.priceCurrency,
						priceValue: data.price.priceValue
					}
				} %}
			</div>
			<div class="m-merchant-selector-item__delivery-costs">
				{{ data.shipping.method }}:
				<div class="m-merchant-selector-item__delivery-costs-price">
					{% include "@m-price" with {
						modifier: 'small',
						data: {
							priceFrom: '',
							priceCurrency: data.shipping.price.priceCurrency,
							priceValue: data.shipping.price.priceValue
						}
					} %}
				</div>
			</div>
		</div>
		{% if data.merchantUnavailable %}
			<div class="m-merchant-selector-item__unavailable">
				{{ data.text }}
			</div>
		{% endif %}
	</div>
</a>
