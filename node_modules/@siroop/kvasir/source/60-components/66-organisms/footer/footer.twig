<div class="o-footer js-o-footer{% if modifier %} o-footer--{{ modifier }}{% endif %}">
	<div class="o-footer__wrapper">
		<div class="o-footer__meta">
			<div class="o-footer__row-1">
				<div class="o-footer-col-1 o-footer__customerservice">
					<div class="o-footer__body">
						<div class="o-footer__title">
							{{ data.customerService.title }}
						</div>
						{% include '@m-list-flag' with { data: data.customerService } %}
					</div>
				</div>
				<div class="o-footer-col-2 o-footer__work">
					<div class="o-footer__title">{{ data.work.title }}</div>
					<div class="o-footer__content">
						{% include '@o-link-list' with { data: {
							items: data.work.items
						} } %}
					</div>
				</div>
				<div class="o-footer-col-3 o-footer__about">
					<div class="o-footer__title">{{ data.about.title }}</div>
					<div class="o-footer__content">
						{% include '@o-link-list' with { data: {
							items: data.about.items
						} } %}
					</div>
				</div>
				<div class="o-footer-col-4 o-footer__symbols">
					<div class="o-footer__body">
						<div class="o-footer__title">{{ data.payment.title }}</div>
						<div class="o-footer__symbols-content">
							{% for item in data.payment.items %}
								<div class="o-footer__symbols-item o-footer__symbols-item--payment">
									{% include '@a-svg-icon' with { modifiers: ['xx-large'], data: { title: item.title, name: item.icon } } %}
								</div>
							{% endfor %}
						</div>
					</div>
					<div class="o-footer__body">
						<div class="o-footer__title">{{ data.delivery.title }}</div>
						<div class="o-footer__symbols-content">
							{% for item in data.delivery.items %}
								<div class="o-footer__symbols-item">
									{% include '@a-svg-icon' with { modifiers: ['xx-large'], data: { title: item.title, name: item.icon } } %}
								</div>
							{% endfor %}
						</div>
					</div>
					<div class="o-footer__body">
						<div class="o-footer__title">{{ data.security.title }}</div>
						<div class="o-footer__symbols-content">
							{% for icon in data.security.items %}
								<img class="o-footer__symbols-item" width="45"
									 src="/img/content/swiss-online-secure.png" title="{{ icon.title }}" alt="{{ icon.title }}">
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
