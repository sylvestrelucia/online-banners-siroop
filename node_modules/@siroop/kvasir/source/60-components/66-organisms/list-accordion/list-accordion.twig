<div class="o-list-accordion{% if modifier %} o-list--accordion-{{ modifier }}{% endif %}" data-c-name="ListAccordion">
	<ul class="o-list-accordion__list">
		{% for item in data.items %}
			{% if item.title|default %}
				<li class="o-list-accordion__item">
					<div class="o-list-accordion__item-wrap">
						<input
							class="o-list-accordion__item-input"
							id="o-list-accordion__item-input-{{ item.id }}"
							name="{{ item.name }}"
							type="{{ item.type }}"
						/>

						<label
							class="o-list-accordion__item-label"
							for="o-list-accordion__item-input-{{ item.id }}"
						>
							{{ item.title }}
							<span class="o-list-accordion__item-icon-plus">
								{% include '@a-svg-icon' with {
								modifiers: ['stroked-thin', 'small'],
								data: {
								name: 'plus'
								}
								} %}
							</span>
							<span class="o-list-accordion__item-icon-minus">
								{% include '@a-svg-icon' with {
								modifiers: ['stroked-thin', 'small'],
								data: {
								name: 'minus'
								}
								} %}
							</span>
						</label>
						{% if item.links|default or item.content|default %}
							<div class="o-list-accordion__item-content">
								{% if item.links|default %}
									<ul class="o-list-accordion__item-links">
									{% for link in item.links %}
										<li class="o-list-accordion__item-link">
											<a class="o-list-accordion__item-link-url" href="{{ link.url }}">
												{{ link.title }}
											</a>
										</li>
									{% endfor %}
									</ul>
								{% endif %}
								{% if item.content|default %}
									{{ item.content }}
								{% endif %}
							</div>
						{% endif %}
					</div>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
</div>
