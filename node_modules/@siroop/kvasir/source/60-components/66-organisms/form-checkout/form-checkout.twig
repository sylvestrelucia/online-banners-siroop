<div class="o-form-checkout obj-form" data-c-name="FormCheckout">

	<fieldset class="obj-form__fieldset">
		<legend class="obj-form__title">{{ data.formBillingAddress.title }}</legend>
		{% if data.labelRequiredFields %}<div class="o-form-checkout__required-fields">{{ data.labelRequiredFields }}</div>{% endif %}
		{% include '@o-form-billing-address' with {
			data: {
				form: data.formBillingAddress
			}
		}%}
	</fieldset>

	<fieldset class="o-form-checkout-shipping obj-form__fieldset obj-form__row">
		<legend class="obj-form__title">{{ data.formShippingAddress.title }}</legend>
		<input class="o-form-checkout__input-checkbox" id="{{ data.formCheckShipping.id }}" type="checkbox" name="{{ data.formCheckShipping.name }}">
		<label class="o-form-checkout__label-checkbox" for="{{ data.formCheckShipping.id }}">
			<div class="o-form-checkout__icon-checked">
				{% include '@a-svg-icon' with {
						data: {
							name: 'checkbox-checked'
						},
						modifiers: ['medium', 'stroked-thin']
					}
				%}
			</div>
			<div class="o-form-checkout__icon-unchecked">
				{% include '@a-svg-icon' with {
						data: {
							name: 'checkbox-unchecked'
						},
						modifiers: ['medium', 'stroked-thin']
					}
				%}
			</div>
			<span class="o-form-checkout__label-text-checkbox">{{ data.formCheckShipping.label }}</span>
		</label>

		<div class="o-form-checkout-shipping__form o-form-checkout__form">
			{% include '@o-form-shipping-address' with {
				data: {
					form: data.formShippingAddress
				}
			}%}
		</div>
	</fieldset>

	<fieldset class="o-form-checkout__personal-data obj-form__fieldset">
		<legend class="obj-form__title">{{ data.formPersonalData.legend }}</legend>
		{% include '@o-form-personal-data' with {
		data: {
			form: data.formPersonalData
		}
		}%}
	</fieldset>

	<fieldset class="obj-form__fieldset">
		<legend class="obj-form__title">{{ data.formContactInfo.title }}</legend>
		{% include '@o-form-contact-info' with {
		data: {
			form: data.formContactInfo
		}
		}%}
	</fieldset>

	<fieldset class="obj-form__fieldset">
		<legend class="obj-form__title">{{ data.formCreateAccount.title }}</legend>
		<input class="o-form-checkout__input-checkbox" id="{{ data.formCheckAccount.id }}" type="checkbox" name="{{ data.formCheckAccount.name }}">
		<label class="o-form-checkout__label-checkbox" for="{{ data.formCheckAccount.id }}">
			<div class="o-form-checkout__icon-checked">
				{% include '@a-svg-icon' with {
						data: {
							name: 'checkbox-checked'
						},
						modifiers: ['medium', 'stroked-thin']
					}
				%}
			</div>
			<div class="o-form-checkout__icon-unchecked">
				{% include '@a-svg-icon' with {
						data: {
							name: 'checkbox-unchecked'
						},
						modifiers: ['medium', 'stroked-thin']
					}
				%}
			</div>
			<span class="o-form-checkout__label-text-checkbox">{{ data.formCheckAccount.label }}</span>
		</label>

		<div class="o-form-checkout-create-account__form o-form-checkout__form">
			{% include '@o-form-create-account' with {
				data: {
					form: data.formCreateAccount
				}
			}%}
		</div>
	</fieldset>

</div>
