<div class="o-notification{% if modifier %} o-notification--{{modifier}}{% endif %}" role="alert" data-c-name="Notification">
	<div class="o-notification__wrapper">
		{% if data.icon %}
		<div class="o-notification__icon">
			{% include '@a-svg-icon' with {
				modifiers: ['stroked', 'medium'], data: { name: data.icon }
			} %}
		</div>
		{% endif %}
		<div class="o-notification__content">
		{# Text is wrapped in the link for the promotion modifier concept #}
		{% if data.url %}
			<a class="o-notification__text-link" href="{{ data.url }}">
		{% endif %}
			<div class="o-notification__text">
				{{ data.text | raw}}
				{% include '@a-svg-icon' with {
					modifiers: ['stroked', 'x-small'], data: { name: 'arrow-right' }
				} %}
			</div>
		{% if data.url %}
			</a>
		{% endif %}
		{% if data.action.text and data.action.url %}
			<div class="o-notification__action">
				<a class="o-notification__button-action a-button a-button--tertiary" href="{{ data.action.url }}">
					<span class="o-notification__button-action-text">
						{{ data.action.text }}
						</span>
					{% include '@a-svg-icon' with {
						modifiers: ['stroked', 'x-small'], data: { name: 'arrow-right' }
					} %}
				</a>
			</div>
		{% endif %}
		</div>
		{% if not data.close.hide %}
		<div class="o-notification__close">
			<button class="o-notification__button-close js-notification-close">
				{% include '@a-svg-icon' with {
					modifiers: ['stroked', 'x-small'], data: { name: 'close' }
				} %}
			</button>
		</div>
		{% endif %}
	</div>
</div>
