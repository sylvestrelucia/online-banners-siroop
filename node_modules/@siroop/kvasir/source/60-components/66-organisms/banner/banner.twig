<div class="o-banner{% if modifier %} o-banner--{{ modifier }}{% endif %}" data-c-name="Banner">
	<div class="o-banner__banner-wrap">
		<div class="o-banner__banner">
			{% include '@m-banner-flexbox' with { modifier: 'image', data: data.banner } %}
		</div>
	</div>
	<div class="o-banner__carousel-wrap">
		<div class="o-banner__carousel js-o-banner__carousel">
			<div class="o-banner__carousel-items js-o-banner__carousel-items" data-label-prev="{{ data.carousel.prev }}" data-label-next="{{ data.carousel.next }}">
				{% for item in data.carousel.items %}
					<a href="#" class="o-banner__carousel-item">
						<div class="o-banner__carousel-title">
							{{ data.carousel.title }}
						</div>
						<div class="o-banner__carousel-image">
							{% include '@m-image-responsive' with { data: item.images[0] } %}
						</div>
						<div class="o-banner__carousel-info">
							<div class="o-banner__carousel-text">
								{{ item.images[0].alt }}
							</div>
							{% if item.price %}
								<div class="o-banner__carousel-price">
									{% include '@m-price' with { data: item.price, modifier: '' } %}
								</div>
							{% endif %}
						</div>
					</a>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
