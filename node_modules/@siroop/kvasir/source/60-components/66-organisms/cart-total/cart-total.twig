<div class="o-cart-total{% if modifier %} o-cart-total--{{ modifier }}{% endif %}" data-c-name="CartTotal">
	<div class="o-cart-total__subtotal">
		<div class="o-cart-total__subtotal-text">{{ data.subtotal.text }}</div>
		<div class="o-cart-total__subtotal-value">

			{% include '@m-price' with {
				data: {
					priceCurrency: data.subtotal.priceCurrency,
					priceValue: data.subtotal.priceValue,
				},
				modifier: 'default'
			} %}

		</div>
	</div>
	<div class="o-cart-total__shipping-costs">
		<div class="o-cart-total__shipping-costs-text">{{ data.shippingCosts.text }}{% if data.shippingCosts.isFree %} <span class="o-cart-total__shipping-costs-is-free">({{ data.shippingCosts.labelFreeShipping }})</span>{% endif %}</div>
		<div class="o-cart-total__shipping-costs-value">

			{% if data.shippingCosts.priceValue > 0 %}
				{% include '@m-price' with {
					data: {
						priceCurrency: data.shippingCosts.priceCurrency,
						priceValue: data.shippingCosts.priceValue,
					},
					modifier: 'default'
				} %}

			{% else %}

				{% include '@m-price' with {
					data: {
						priceCurrency: data.shippingCosts.priceCurrency,
						priceValue: '0.00',
					},
					modifier: 'reduced'
				} %}
			{% endif %}

		</div>
	</div>
        {% if data.discount.hasDiscount %}
            <div class="o-cart-total__discount">
                    <div class="o-cart-total__discount-text">{{ data.discount.text }}</div>
                    <div class="o-cart-total__discount-value">

                            {% include '@m-price' with {
                                    data: {
                                            priceCurrency: data.discount.priceCurrency,
                                            priceValue: data.discount.priceValue,
                                    },
                                    modifier: 'reduced'
                            } %}

                    </div>
            </div>
        {% endif %}
	<div class="o-cart-total__total">
		<div class="o-cart-total__total-text">{{ data.total.text }}</div>
		<div class="o-cart-total__total-value">

			{% include '@m-price' with {
				data: {
					priceCurrency: data.total.priceCurrency,
					priceValue: data.total.priceValue,
				},
				modifier: 'xx-large'
			} %}

		</div>
	</div>
</div>
