<div class="o-list-header{% if modifier %} o-list-header--{{ modifier }}{% endif %}" data-c-name="ListHeader">
	<div class="o-list-header__count">{{ data.count }}</div>
	<div class="o-list-header__sort">
		<div class="o-list-header__sort-dropdown">
			{% include '@m-dropdown' with { data: data.sort } %}
		</div>
		<noscript class="o-list-header__sort-submit">
			<button class="o-list-header__sort-button" type="submit">{{ data.sort.apply }}</button>
		</noscript>
	</div>
</div>
