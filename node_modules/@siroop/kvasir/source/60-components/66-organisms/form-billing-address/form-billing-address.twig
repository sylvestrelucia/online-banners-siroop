<div class="o-form-billing-address obj-form" data-c-name="FormBillingAddress">
	<div class="o-form-billing-address__field obj-form__row">
		<label class="o-form-billing-address__label-hidden">{{ data.form.fields.gender.title }}</label>
		<ul class="o-form-billing-address__list o-form-billing-address__list-gender js-o-form-billing-address__list-gender">
			<li class="o-form-billing-address__list-item">
				<label class="o-form-billing-address__label-radio" for="{{ data.form.fields.gender.items[0].id }}">
					<input class="o-form-billing-address__input-hidden"
						   data-parsley-class-handler=".js-o-form-billing-address__list-gender"
						   data-parsley-errors-container=".o-form-billing-address__error-container"
						   data-parsley-multiple="gender"
						   data-parsley-required-message="{{ data.form.fields.gender.errorMessage }}"
						   data-parsley-group="{{ data.form.name }}"
						   type="radio" id="{{ data.form.fields.gender.items[0].id }}"
						   name="gender" required />
					<div class="o-form-billing-address__icon-checked">
						{% include '@a-svg-icon' with {
								data: {
									name: 'radio-checked'
								},
								modifiers: ['medium', 'stroked-thin']
							}
						%}
					</div>
					<div class="o-form-billing-address__icon-unchecked">
						{% include '@a-svg-icon' with {
								data: {
									name: 'radio-unchecked'
								},
								modifiers: ['medium', 'stroked-thin']
							}
						%}
					</div>
					<span class="o-form-billing-address__label-item">{{ data.form.fields.gender.items[0].label }}</span>
				</label>
			</li>
			<li class="o-form-billing-address__list-item">
				<label class="o-form-billing-address__label-radio" for="{{ data.form.fields.gender.items[1].id }}">
					<input class="o-form-billing-address__input-hidden"
						   data-parsley-multiple="gender"
						   data-parsley-group="{{ data.form.name }}"
						   type="radio" id="{{ data.form.fields.gender.items[1].id }}"
						   name="gender" />
					<div class="o-form-billing-address__icon-checked">
						{% include '@a-svg-icon' with {
								data: {
									name: 'radio-checked'
								},
								modifiers: ['medium', 'stroked-thin']
							}
						%}
					</div>
					<div class="o-form-billing-address__icon-unchecked">
						{% include '@a-svg-icon' with {
								data: {
									name: 'radio-unchecked'
								},
								modifiers: ['medium', 'stroked-thin']
							}
						%}
					</div>
					<span class="o-form-billing-address__label-item">{{ data.form.fields.gender.items[1].label }}</span>
				</label>
			</li>
		</ul>
		<div class="o-form-billing-address__error-container"></div>
	</div>

	<div class="obj-form__row obj-form__layout obj-form__layout-6">

		<div class="o-form-billing-address__field obj-form__col">
			<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.firstName.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.firstName.id }}">{{ data.form.fields.firstName.label }}</label>
			<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input"{% if data.form.fields.firstName.options.required %} required{% endif %} type="{{ data.form.fields.firstName.options.type}}" id="{{ data.form.fields.firstName.id }}" name="{{ data.form.fields.firstName.name }}" autocomplete="{{ data.form.fields.firstName.autocomplete }}" data-parsley-error-message="{{ data.form.fields.firstName.errorMsg }}" minlength="{{ data.form.fields.firstName.options.minlength }}" />
		</div>

		<div class="o-form-billing-address__field obj-form__col">
			<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.lastName.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.lastName.id }}">{{ data.form.fields.lastName.label }}</label>
			<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input" {% if data.form.fields.lastName.options.required %} required{% endif %} type="{{ data.form.fields.lastName.options.type}}" id="{{ data.form.fields.lastName.id }}" name="{{ data.form.fields.lastName.name }}" autocomplete="{{ data.form.fields.lastName.autocomplete }}" data-parsley-error-message="{{ data.form.fields.lastName.errorMsg }}" minlength="{{ data.form.fields.lastName.options.minlength }}" />
		</div>
	</div>

	<div class="o-form-billing-address__field o-form-billing-address__field-address obj-form__row obj-form__layout-9x3">
		<div class="o-form-billing-address__field o-form-billing-address__street obj-form__col">
			<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.street.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.street.id }}">{{ data.form.fields.street.label }}</label>
			<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input"{% if data.form.fields.street.options.required %} required{% endif %} type="{{ data.form.fields.street.options.type}}" id="{{ data.form.fields.street.id }}" name="{{ data.form.fields.street.name }}" autocomplete="{{ data.form.fields.street.autocomplete }}" data-parsley-error-message="{{ data.form.fields.street.errorMsg }}" minlength="{{ data.form.fields.street.options.minlength }}" />
		</div>
		<div class="o-form-billing-address__field o-form-billing-address__house-number obj-form__col">
			<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.houseNumber.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.houseNumber.id }}">{{ data.form.fields.houseNumber.label }}</label>
			<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input"{% if data.form.fields.houseNumber.options.required %} required{% endif %} data-parsley-type="{{ data.form.fields.houseNumber.options.type}}" id="{{ data.form.fields.houseNumber.id }}" name="{{ data.form.fields.houseNumber.name }}" data-parsley-error-message="{{ data.form.fields.houseNumber.errorMsg }}" maxlength="{{ data.form.fields.houseNumber.options.maxlength }}" autocomplete="{{ data.form.fields.houseNumber.autocomplete }}" />
		</div>
	</div>

	<div class="o-form-billing-address__field o-form-billing-address__field-location obj-form__row obj-form__layout-3x9">
		<div class="o-form-billing-address__field o-form-billing-address__postal obj-form__col">
			<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.postal.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.postal.id }}">{{ data.form.fields.postal.label }}</label>
			<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input"{% if data.form.fields.postal.options.required %} required{% endif %} type="{{ data.form.fields.postal.options.type}}" id="{{ data.form.fields.postal.id }}" name="{{ data.form.fields.postal.name }}" autocomplete="{{ data.form.fields.postal.autocomplete }}" data-parsley-error-message="{{ data.form.fields.postal.errorMsg }}" minlength="{{ data.form.fields.postal.options.minlength }}" maxlength="{{ data.form.fields.postal.options.maxlength }}" pattern="{{ data.form.fields.postal.options.pattern }}" />
		</div>
		<div class="o-form-billing-address__field o-form-billing-address__city obj-form__col">
			<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.city.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.city.id }}">{{ data.form.fields.city.label }}</label>
			<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input" {% if data.form.fields.city.options.required %} required{% endif %} type="{{ data.form.fields.city.options.type}}" id="{{ data.form.fields.city.id }}" name="{{ data.form.fields.city.name }}" autocomplete="{{ data.form.fields.city.autocomplete }}" data-parsley-error-message="{{ data.form.fields.city.errorMsg }}" minlength="{{ data.form.fields.city.options.minlength }}"/>
		</div>
	</div>


	{% include '@m-button-toggle-element' with {
		data: {
			toggleTarget: '.js-o-form-billing-address__extra-house-number',
			toggleLabel: 'Adressezusatz Hinzufügen',
			},
			modifiers: ['medium', 'stroked-thin']
		}
	%}

	<div class="o-form-billing-address__field o-form-billing-address__extra-house-number js-o-form-billing-address__extra-house-number obj-form__row obj-form__col o-form-billing-address__toggle-element is-toggled">
		<label class="o-form-billing-address__label obj-form__label" for="{{ data.form.fields.extra.id }}">{{ data.form.fields.extra.label }}</label>
		<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input" type="{{ data.form.fields.extra.options.type}}" id="{{ data.form.fields.extra.id }}" name="{{ data.form.fields.extra.name }}" autocomplete="{{ data.form.fields.extra.autocomplete }}" />
	</div>

	{% include '@m-button-toggle-element' with {
		data: {
			toggleTarget: '.js-o-form-billing-address__company',
			toggleLabel: 'Firma Hinzufügen',
		},
		modifiers: ['medium', 'stroked-thin']
	}
	%}

	<div class="o-form-billing-address__field o-form-billing-address__company js-o-form-billing-address__company obj-form__row obj-form__col o-form-billing-address__toggle-element is-toggled">
		<label class="o-form-billing-address__label obj-form__label{% if data.form.fields.company.options.required %} obj-form__label--required{% endif %}" for="{{ data.form.fields.company.id }}">{{ data.form.fields.company.label }}</label>
		<input data-parsley-group="{{ data.form.name }}" class="o-form-billing-address__input" type="{{ data.form.fields.company.options.type}}" id="{{ data.form.fields.company.id }}" name="{{ data.form.fields.company.name }}" autocomplete="{{ data.form.fields.company.autocomplete }}" />
	</div>
</div>
