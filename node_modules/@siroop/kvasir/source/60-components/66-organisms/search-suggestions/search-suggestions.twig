<div class="o-search-suggestions{% if modifier %} o-search-suggestions--{{modifier}}{% endif %}" data-c-name="SearchSuggestions">
	<div class="o-search-suggestions__list">
		{% for item in data.searchCategories %}
			<a class="o-search-suggestions__category" href="{{ item.data.url }}">
				<mark class="o-search-suggestions__category-term">{{item.data.queryString}}</mark>
				<span class="o-search-suggestions__category-prefix">in</span>
				<span class="o-search-suggestions__category-title">{{ item.data.name }}</span>
				<span class="o-search-suggestions__category-counter">({{ item.data.product_count }})</span>
			</a>
		{% endfor %}
		{% for item in data.searchItems %}
			<a class="o-search-suggestions__product" href="{{item.data.url}}">
				{% if item.data.image_url %}
					<div class="o-search-suggestions__product-image-wrapper">
						<img class="o-search-suggestions__product-image" src="{{ item.data.image_url }}" alt="" width="50" height="50">
					</div>
				{% endif %}
				<span class="o-search-suggestions__product-title">{{ item.data.name }}</span>
				<span class="o-search-suggestions__product-price">{% if item.data.group_id != 'na' %}ab {% endif %}CHF <span class="o-search-suggestions__product-price-value">{{ item.data.price }}</span></span>
			</a>
		{% endfor %}
		<a class="o-search-suggestions__button" href="{{ data.buttonUrl }}">
			{{ data.searchSummary.text }}
			{% include '@a-svg-icon' with {
				modifiers: ['stroked', 'xx-small'],
				data: {name: 'arrow-right'}
			} %}
		</a>
	</div>
</div>
