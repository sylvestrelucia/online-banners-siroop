<div class="o-form-contact-info obj-form" data-c-name="FormContactInfo">
	<div class="obj-form__row">
		<div class="o-form-contact-info__field obj-form__col">
			<label class="o-form-contact-info__label" for="{{ data.form.fields.email.id }}">
				<span class="o-form-contact-info__label--required">{{ data.form.fields.email.label }}</span>
				<span class="o-form-contact-info__sublabel">{{ data.form.fields.email.sublabel }}</span>
			</label>
			<input class="o-form-contact-info__input"
				   type="{{ data.form.fields.email.options.type }}"
				   id="{{ data.form.fields.email.id }}" name="{{ data.form.fields.email.name }}"
				   data-parsley-group="{{ data.form.fields.email.group }}"
				   autocomplete="{{ data.form.fields.email.autocomplete }}"
				   {% if data.form.fields.email.errorMessage %}data-parsley-error-message="{{ data.form.fields.email.errorMessage }}"{% endif %}
				   minlength="{{ data.form.fields.email.options.minlength }}"
				   {% if data.form.fields.email.options.required %} required{% endif %} data-parsley-trigger="focusout" />
		</div>
	</div>
	<div class="obj-form__row">
		<div class="o-form-contact-info obj-form__col">
			<label class="o-form-contact-info__label"
				   for="{{ data.form.fields.phone.id }}">{{ data.form.fields.phone.label }}<span
					class="o-form-contact-info__sublabel">{{ data.form.fields.phone.sublabel }}</span></label>
			<input class="o-form-contact-info__input" type="{{ data.form.fields.phone.options.type }}"
				   id="{{ data.form.fields.phone.id }}" name="{{ data.form.fields.phone.name }}"
				   autocomplete="{{ data.form.fields.phone.autocomplete }}"/>
		</div>
	</div>
</div>
