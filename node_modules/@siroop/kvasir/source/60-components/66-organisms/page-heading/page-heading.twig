<div class="o-page-heading{% if modifier %} o-page-heading--{{ modifier }}{% endif %}" data-c-name="PageHeading">
	<div class="t-brand-page__wrap-inner">
		<div class="o-page-heading__content">

			{% if data.headerImage|default %}
				<div class="o-page-heading__banner">
					{% include '@m-image-responsive' with { data: data.headerImage } %}
				</div>
			{% endif %}

			<div class="o-page-heading__desc{% if not data.headerImage|default %} o-page-heading__desc-full{% endif %}">

				{% if data.logo|default %}
				<div class="o-page-heading__logo">
					<a href="{{ data.brandUrl.href }}">
						<img src="{{ data.logo }}" alt="{{ data.name }}"/>
					</a>
				</div>
				{% endif %}

				<h1 class="o-page-heading__name">{{ data.name }}</h1>

				{% if data.slogan|default %}
					<span class="o-page-heading__slogan">{{ data.slogan }}</span>
				{% endif %}
			</div>
		</div>
	</div>
</div>
