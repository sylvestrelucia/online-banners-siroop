<div hidden>
	{% include '@a-svg-sprite--categories' %}
</div>
<ul class="o-category-list{% if modifier %} o-category-list--{{modifier}}{% endif %}" data-c-name="CategoryList">
	{% for category in data.categories %}
		<li class="o-category-list__item">
			<a class="o-category-list__link" href="{{ category.url }}">
				<div class="o-category-list__icon">
					{% include '@a-svg-icon' with {
					data: { name: category.icon,
					title: category.title,
					}
					}
					%}
				</div>
			<span class="o-category-list__title">{{ category.title | raw }}</span>
			</a>
		</li>
	{% endfor %}
</ul>
