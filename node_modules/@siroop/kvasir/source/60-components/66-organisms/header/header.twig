<header class="o-header{% if modifier %} o-header--{{ modifier }}{% endif %}" data-c-name="Header">
	<div class="o-header__usp-banner">
		{% include '@m-usp-banner' with { modifier: 'small', data: data.uspBanner } %}
	</div>
	<div class="o-header__wrapper">
		<div class="o-header__row o-header__row-1">
			<div class="o-header__col o-header__row-1-col-1">
				{% include '@m-logo' with {
					data: data.logo
				} %}
			</div>
			<div class="o-header__col o-header__row-1-col-2">
				<div class="o-header__search">
					{% include '@m-searchbar' with {
						data: data.searchbar
					} %}
				</div>
			</div>
			<div class="o-header__col o-header__row-1-col-3">
				<div class="o-header__language">
					{% include '@m-language-switcher' with { data: data.languageSwitcher, modifier: 'with-separator' } %}
				</div>
				<ul class="o-header__shortlinks">
					{% for item in data.shortlinks.items %}
						<li class="o-header__shortlinks-item">
							<a class="o-header__shortlinks-link" href="{{ item.url }}">{{ item.label }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="o-header__row o-header__row-2">
			<div class="o-header__col o-header__row-2-col-1">
				<div class="o-header__navigation">
					{% include '@o-navigation-primary' with {
						modifier: 'resiroop',
						data: data.navigation
					} %}
				</div>

				<a class="o-header__link o-header__wishlist" href="/components/preview/t-wishlist" data-count="{{ data.wishlist.numberOfItems }}" aria-label="{{ data.wishlist.text }}">
					<span class="o-header__link-icon">
						{% include '@a-svg-icon' with {
						modifiers: ['stroked'],
						data: {
						name: 'heart',
						}
						} %}
					</span>
					<span class="o-header__link-text">{{ data.wishlist.text }}</span>
				</a>

				<div class="o-header__link-button">
					<a class="o-header__link o-header__link-with-children js-o-header__link-with-children" href="#">
						<span class="o-header__link-icon">
							{% if data.loggedIn %}
								{% include '@a-svg-icon' with {
									modifiers: ['stroked'],
									data: {
										name: 'logged',
									}
								} %}
							{% else %}
								{% include '@a-svg-icon' with {
									modifiers: ['stroked'],
									data: {
										name: 'account',
									}
								} %}
							{% endif %}
						</span>
						<span class="o-header__link-text">{{ data.myAccount.label }}</span>
					</a>
					<ul class="o-header__link-with-children-list js-o-header__link-with-children-list">
						{% for item in data.myAccount.items %}
							<li class="o-header__link-with-children-list-item js-o-header__link-with-children-list-item">
								<a class="o-header__link-with-children-list-item-link js-o-header__link-with-children-list-item-link" tabindex="-1" href="{{ item.url }}">{{ item.label }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>

				{#<a class="o-header__link o-header__login" href="#" aria-label="{{ data.login }}">#}
					{#<span class="o-header__link-icon">#}
						{#{% include '@a-svg-icon' with {#}
							{#modifiers: ['stroked'],#}
							{#data: {#}
							{#name: 'account',#}
							{#}#}
						{#} %}#}
					{#</span>#}
					{#<span class="o-header__link-text">{{ data.login }}</span>#}
				{#</a>#}

				<a class="o-header__link o-header__cart" href="/components/preview/t-cart" data-count="{{ data.cart.numberOfItems }}" data-cart-item-added aria-label="{{ data.cart.desc }}">
					<span class="o-header__link-icon">
						{% include '@a-svg-icon' with {
							modifiers: ['stroked'],
							data: {
								name: 'basket',
							}
						} %}
					</span>
					<span class="o-header__link-text">{{ data.cart.text }}</span>
				</a>
			</div>
		</div>
	</div>
</header>
