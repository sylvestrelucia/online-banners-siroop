<div class="o-teaser-list{% if modifier %} o-teaser-list--{{ modifier }}{% endif %}">
	{% if data.rows %}
		{% for row in data.rows %}
			<div class="o-teaser-list__wrap">
				{% for item in row.items %}
					<div class="o-teaser-list__item{% if row.modifier %} o-teaser-list__item--{{ row.modifier }}{% endif %}{% if data.showMoreItems %} {{ data.showMoreItems }}{% endif %}">
						{% include '@m-teaser-item' with { data : item, modifier : item.modifier|default } %}
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	{% endif %}
</div>
