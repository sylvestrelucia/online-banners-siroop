<div class="o-merchant-selector{% if modifier %} o-merchant-selector--{{ modifier }}{% endif %}"
	 data-c-name="MerchantSelector">
	<div class="o-merchant-selector__items js-o-merchant-selector__items">
		{% for merchant in data.merchants %}
			<div class="o-merchant-selector__item js-o-merchant-selector-item">
				{% include '@o-merchant-selector-item' with {
					modifier: merchant.merchantUnavailable ? 'unavailable' : '',
					data: merchant
				} %}
			</div>
		{% endfor %}
	</div>
</div>

