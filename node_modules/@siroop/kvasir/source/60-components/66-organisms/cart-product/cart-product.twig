<div class="o-cart-product{% if modifier %} o-cart-product--{{modifier}}{% endif %}" data-c-name="CartProduct">
	<div class="o-cart-product__product">

		<div class="o-cart-product__info">
			{% if data.product.images|default %}
			<div class="o-cart-product__image">
				<a class="o-cart-product__image-link" href="{{ data.product.url }}">
					{% include '@m-image-responsive' with {data: data.product.images[0]} %}
				</a>
			</div>
			{% endif %}

			<div class="o-cart-product__desc">
				{% if data.product.title|default %}
				<a class="o-cart-product__title-link" href="{{ data.product.url }}">
					<h3 class="o-cart-product__title">{{ data.product.title }}</h3>
				</a>
					{% if data.readOnly|default %}
						<div class="o-cart-product__subtitle">{{ data.product.cartItems }} {{ data.product.cartItemsLabel }}</div>
					{% endif %}

					{% if data.product.availability.maxValue > 0 %}
						<div class="o-cart-product__specifications">
							<b>{{ data.product.specifications[3].key }}:</b> {{ data.product.specifications[3].value }}
						</div>
						<div class="o-cart-product__subtitle">{{ data.product.price.unitPrice }}: {{ data.product.price.priceCurrency }} {{ data.product.price.priceValue }}</div>
					{% endif %}
				{% endif %}
			</div>
		</div>

		<div class="o-cart-product__details">
			{% if not data.readOnly|default %}
				<div class="o-cart-product__controls">
					{% if data.product.availability.maxValue > 0 %}
						<div class="o-cart-product__quantity">
							{% set inputQuantity = {
								'minValue': data.product.availability.minValue,
								'maxValue': data.product.availability.maxValue,
								'initialValue': data.product.availability.initialValue
							} %}
							{% include '@m-input-quantity' with {data: data.product.availability} %}
						</div>
					{% endif %}
					<div class="o-cart-product__remove">
						<button class="o-cart-product__remove-button" type="button">
							<span class="o-cart-product__remove-icon">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked', 'small'], data: { name: 'trash' }
								} %}
							</span>
							{{ data.remove }}
						</button>
					</div>
				</div>
			{% endif %}
			<div class="o-cart-product__price">
				{% if data.product.availability.maxValue > 0 %}
					{% if data.product.price.priceDiscount %}
						{% set priceModifier = 'striked m-price--small' %}
					{% endif %}

					{% if data.product.price.priceDiscount and not data.product.price.priceDrop %}
						{% include '@m-price' with {
							data: {
								priceCurrency: data.product.price.priceCurrency,
								priceValue: data.product.price.priceValue,
							},
							modifier: priceModifier
						} %}
						{% include '@m-price' with {
							data: {
								priceCurrency: data.product.price.priceCurrency,
								priceValue: data.product.price.priceDiscount,
							},
							modifier: 'reduced'
						} %}
					{% elseif data.product.price.priceDrop %}
						{% include '@m-price--price-drop' with {
							data: {
								priceCurrency: data.product.price.priceCurrency,
								priceValue: data.product.price.priceDiscount,
								priceDrop: true
							},
							modifier: 'price-drop'
						} %}
					{% endif %}
				{% else %}
					<div class="o-cart-product__stock-status">
						{{ data.product.stockStatus }}
					</div>
				{% endif %}
			</div>
		</div>

	</div>

	{% if data.product.availability.maxValue > 0 %}
		<div class="o-cart-product__additional">
			<div class="o-cart-product__merchant">
				<div>{{ data.product.merchant.name }}</div>
				<div>{{ data.product.delivery.spedition|raw}}</div>
			</div>
			<div class="o-cart-product__shipment">
				{% if data.product.price.priceDiscount|default %}
					{% include '@m-price' with {
						data: {
							priceCurrency: data.product.shipping.priceCurrency,
							priceValue: data.product.shipping.priceValue,
						},
						modifier: 'm-price--small'
					} %}
				{% else %}
					<span class="o-cart-product__shipment-free">{{ data.product.shipping.free }}</span>
				{% endif %}
			</div>
		</div>
	{% endif %}

</div>
