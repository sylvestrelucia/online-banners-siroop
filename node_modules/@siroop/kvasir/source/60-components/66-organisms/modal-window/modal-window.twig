<div class="o-modal-window" data-c-name="ModalWindow">
	<div class="o-modal-window__container js-o-modal-window__container" aria-hidden="true" id="{{ data.identifier }}">
		<div class="o-modal-window__overlay" tabindex="-1" data-a11y-dialog-hide="{{ data.identifier }}"></div>
		<div class="o-modal-window__content" role="dialog">
			<div class="o-modal-window__close">
				<span class="o-modal-window__close-title">{{ data.title }}</span>
				<button class="o-modal-window__close-button" data-a11y-dialog-hide type="button" aria-label="{{ data.close }}">
					{% include "@a-svg-icon" with {
						modifiers: ['stroked', 'x-small'], data: { name: 'close' }
					}%}
				</button>
			</div>
			<div class="o-modal-window__img">
				{% include '@m-image-responsive' with { data: data.image } %}
			</div>
		</div>
	</div>
</div>
