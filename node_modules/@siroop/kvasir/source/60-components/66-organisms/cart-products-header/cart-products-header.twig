<div class="o-cart-products-header{% if modifier %} o-cart-products-header--{{ modifier }}{% endif %} obj-banner--grey">
	{% for item in data.items %}
		<div class="o-cart-products-header__item">
			<div class="o-cart-products-header__item-label">
				{% if item.label %}
					<span>
						{{ item.label }}
					</span>
				{% endif %}

				{% if item.shipment %}
					<span class="o-cart-products-header__item-shipment">
						{{ item.shipment }}
					</span>
				{% endif %}
			</div>

			{% if item.location %}
				<div class="o-cart-products-header__item-location">
					<svg class="o-cart-products-header__item-icon mat-icon--stroked">
						<use xlink:href="#location"></use>
					</svg>
					{{ item.location }}
				</div>
			{% endif %}

			{% if item.product %}
				<div class="o-cart-products-header__item-product">
					{{ item.product }}
				</div>
			{% endif %}

			{% if item.info %}
				<div class="o-cart-products-header__item-info">
					{{ item.info }}
				</div>
			{% endif %}
		</div>
	{% endfor %}
</div>
