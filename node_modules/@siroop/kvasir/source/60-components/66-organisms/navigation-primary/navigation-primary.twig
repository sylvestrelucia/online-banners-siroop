{% macro navigation(generalData, itemData, itemClass, hideClass)%}
{% import _self as macros %}
   <div class="o-navigation-primary__{{ itemClass }}">
		<div class="o-navigation-primary__first-lvl-list js-o-navigation-primary__first-lvl-list">
			<div class="o-navigation-primary__first-lvl-item o-navigation-primary__first-lvl-item-title js-o-navigation-primary__first-lvl-item">
				<a href="{{ generalData.fallbackUrl}}" class="o-navigation-primary__first-lvl-item-link js-o-navigation-primary__first-lvl-item-link">
					<span class="o-navigation-primary__first-lvl-item-title">{{ itemData.title }}</span>
					<span class="o-navigation-primary__first-lvl-item-arrow-down">
						{% include '@a-svg-icon' with {
						modifiers: ['stroked', 'small'],
						data: {
						name: 'arrow-down',
						}
						} %}
					</span>
					<span class="o-navigation-primary__first-lvl-item-arrow-up">
						{% include '@a-svg-icon' with {
						modifiers: ['stroked', 'small'],
						data: {
						name: 'arrow-up',
						}
						} %}
					</span>
					<span class="o-navigation-primary__first-lvl-item-icon-plus">
						{% include '@a-svg-icon' with {
						modifiers: ['stroked-thin', 'small'],
						data: {
						name: 'plus'
						}
						} %}
					</span>
					<span class="o-navigation-primary__first-lvl-item-icon-minus">
						{% include '@a-svg-icon' with {
						modifiers: ['stroked-thin', 'small'],
						data: {
						name: 'minus'
						}
						} %}
					</span>
				</a>

				<!-- items - second level start -->
				<div class="o-navigation-primary__sec-lvl-panel js-o-navigation-primary__sec-lvl-panel">
					<div class="o-navigation-primary__sec-lvl-panel-wrapper">
						{% for item in itemData.items %}
							<div class="o-navigation-primary__sec-lvl-item js-o-navigation-primary__sec-lvl-item">

								<button class="o-navigation-primary__sec-lvl-item-link-button js-o-navigation-primary__sec-lvl-item-button">
									<span class="o-navigation-primary__sec-lvl-item-link">
										<span class="o-navigation-primary__sec-lvl-item-text js-o-navigation-primary__sec-lvl-item-text">{{ item.title }}</span>
										<span class="o-navigation-primary__sec-lvl-item-icon-next">
											{% include "@a-svg-icon" with {
											modifiers: ['small', 'stroked-thin'],
											data: {
											name: 'arrow-right'
											}
											} %}
										</span>
									</span>
								</button>

								<!-- sub items - third level start -->
								<div class="o-navigation-primary__panel o-navigation-primary__third-lvl-panel js-o-navigation-primary__panel {{ hideClass }}">
									<div class="o-navigation-primary__third-lvl-header">
										<div class="o-navigation-primary__third-lvl-header-back-wrapper js-o-navigation-primary__back">
											<button aria-label="{{ generalData.back }}" class="o-navigation-primary__third-lvl-header-back">
												{% include "@a-svg-icon" with {
												modifiers: ['small', 'stroked-thin'],
												data: {
												name: 'arrow-long-left'
												}
												} %}
											</button>
											<span class="o-navigation-primary__third-lvl-header-title">
												{{ generalData.back }}
											</span>
										</div>
										<button aria-label="{{ generalData.close }}" class="o-navigation-primary__third-lvl-header-close js-o-navigation-primary__close">
											{% include "@a-svg-icon" with {
											modifiers: ['small', 'stroked-thin'],
											data: {
											name: 'close'
											}
											} %}
										</button>
									</div>

									{% if item.type == 'categories' %}
										<div class="o-navigation-primary__overview">
											<span class="o-navigation-primary__overview-title"> {{ item.title  }} </span>
											<a class="o-navigation-primary__overview-link" href="{{ item.url }}">
												<span class="o-navigation-primary__overview-link-title o-navigation-primary__overview-link-title">{{ generalData.overviewLink }}</span>
												<span class="o-navigation-primary__overview-icon">
													{% include "@a-svg-icon" with {
													modifiers: ['small', 'stroked-thin'],
													data: {
													name: 'arrow-right'
													}
													} %}
												</span>
											</a>
										</div>
										<div class="o-navigation-primary__third-lvl-panel-container">
											{% for subItem in item.items %}
												<div class="o-navigation-primary__third-lvl-item">
													<a class="o-navigation-primary__third-lvl-item-link js-o-navigation-primary__third-lvl-item-link" href="{{ subItem.url }}">{{ subItem.title }}</a>
												</div>
											{% endfor %}
										</div>
									{% endif %}

									{% if item.type == 'top-brands' %}
										<div class="o-navigation-primary__third-lvl-panel-container">
											<div class="o-navigation-primary__overview">
												<span class="o-navigation-primary__overview-title"> {{ item.title  }}</span>
											</div>
											{% for subItem in item.items %}
												<div class="o-navigation-primary__third-lvl-item">
													<a class="o-navigation-primary__third-lvl-item-link js-o-navigation-primary__third-lvl-item-link" href="{{ subItem.url }}">
														{% include '@m-image-responsive' with {data: subItem.image} %}
													</a>
												</div>
											{% endfor %}
										</div>
									{% endif %}

									{% if item.type == 'all-brands' %}
										<div class="o-navigation-primary__third-lvl-panel-container">
											<div class="o-navigation-primary__overview">
												<span class="o-navigation-primary__overview-title"> {{ item.title  }}</span>
											</div>
											<div class="o-navigation-primary__alphabet">
												{% for subItem in item.items %}
													<div class="o-navigation-primary__alphabet-item">
														<a class="o-navigation-primary__alphabet-item-link" href="{{ subItem.url }}">
															{{ subItem.text }}
														</a>
													</div>
												{% endfor %}
											</div>
											<div class="o-navigation-primary__show-all-brands">
												<a class="o-navigation-primary__show-all-brands-button" href="{{ item.showAllBrandsUrl }}">{{ item.showAllBrandsLabel }}</a>
											</div>
										</div>
									{% endif %}
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endmacro %}

{% import _self as macros %}

<div class="o-navigation-primary {% if modifier %} o-navigation-primary--{{ modifier }}{% endif %}" data-c-name="NavigationPrimary">

	<a href="{{ data.fallbackUrl }}" class="o-navigation-primary__burger-button js-o-navigation-primary__burger-button">
		<span class="o-navigation-primary__burger-icon">
			{% include '@a-svg-icon' with {
			modifiers: ['stroked'],
			data: {
			name: 'burger',
			}
			} %}
		</span>
		<span class="o-navigation-primary__burger-label">
		 	{{ data.triggerButton.text }}
		</span>
	</a>

	<nav class="o-navigation-primary__nav">
		<div role="dialog" aria-label="{{ data.name }}"
			 class="o-navigation-primary__panel js-o-navigation-primary__panel"
			 data-trigger-by="{{ data.triggerButton.class }}">

			<div class="o-navigation-primary__header-primary">
				<span class="o-navigation-primary__header-primary-title">
					{{ data.menu }}
				</span>
				<button aria-label="{{ data.close }}" class="o-navigation-primary__header-primary-close js-o-navigation-primary__close">
					{% include "@a-svg-icon" with {
					modifiers: ['small', 'stroked-thin'],
					data: {
					name: 'close'
					}
					} %}
				</button>
			</div>
			<div class="o-navigation-primary__container">
				{% if data.navLevels.categories %}
					{{ macros.navigation(data, data.navLevels.categories, 'categories', ' is-invisible') }}
				{% endif %}

				{% if data.navLevels.brands %}
					{{ macros.navigation(data, data.navLevels.brands, 'brands',  null) }}
				{% endif %}

				{% if data.navLanguage %}
					{% include '@m-language-switcher' with {
						data: data.navLanguage
					} %}
				{% endif %}
			</div>
		</div>
	</nav>
</div>
