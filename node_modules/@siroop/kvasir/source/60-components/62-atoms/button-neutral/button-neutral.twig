<button class="a-button-neutral{% if modifier %} a-button-neutral--{{ modifier }}{% endif %}">
	{% if data.icon %}
		<div class="a-button-neutral__icon">
			{% include '@a-svg-icon' with {
					data: {
						name: data.icon
					},
					modifiers: ['stroked', 'small']
				}
			%}
		</div>
	{% endif %}
	{{ data.text }}
</button>

