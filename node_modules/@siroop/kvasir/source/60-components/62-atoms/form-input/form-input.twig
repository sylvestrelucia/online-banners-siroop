<input
	class="a-form-input{% if modifier %} a-form-input--{{ modifier }}{% endif %}"
	type="{{ data.options.type }}"
	{% if data.id is defined %} id="{{ data.id }}" {% endif %}
	name="{{ data.name }}"
	{% if not data.placeholder is empty %}placeholder="{{ data.placeholder }}"{% endif %}
	{% if not data.autocomplete is empty %}autocomplete="{{ data.autocomplete }}"{% endif %}
	{% if not data.errorMsg is empty %}data-parsley-error-message="{{ data.errorMsg }}"{% endif %}
	{% if data.options.required %}required{% endif %}
	{% if data.options.disabled %}disabled{% endif %}
	{% if data.options.checked %}checked{% endif %}
	{% if data.options.type == 'radio' and data.options.required %}data-parsley-errors-container=".m-form-field-radio__error-container"{% endif %}
	data-c-name="FormInput" />
