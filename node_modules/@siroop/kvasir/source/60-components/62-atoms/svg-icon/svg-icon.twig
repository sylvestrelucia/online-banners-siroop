{% set modifiersClasses = '' %}
{% for modifier in modifiers %}
	{% set modifiersClasses = modifiersClasses ~ ' a-svg-icon--' ~ modifier %}
{% endfor %}

<svg class="a-svg-icon{{ modifiersClasses }}">
	<use xlink:href="#{{ data.name }}">
		{% if data.title|default %}<title>{{ data.title }}</title>{% endif %}
	</use>
</svg>
