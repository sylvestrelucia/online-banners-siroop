<div class="m-breadcrumb{% if modifier %} m-breadcrumb--{{ modifier }}{% endif %}">
	<nav>
		<ol class="m-breadcrumb__list" vocab="http://schema.org/" typeof="BreadcrumbList">
			{% for item in data.items %}
				<li class="m-breadcrumb__item" property="itemListElement" typeof="ListItem">
					{% if item.url|default %}
						<a class="m-breadcrumb__item-link" href={{ item.url }} title="{{ item.name }}" property="item" typeof="WebPage">
							<span class="m-breadcrumb__item-arrow-back">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked', 'small'], data: { name: 'arrow-left' }
								} %}
							</span>
							<span property="name">{{ item.name }}</span>
							<meta property="position" content="{{loop.index}}">
						</a>
					{% else %}
						<span property="item">
							<span class="m-breadcrumb__item-arrow-back">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked', 'small'], data: { name: 'arrow-left' }
								} %}
							</span>
							<span property="name">{{ item.name }}</span>
							<meta property="position" content="{{loop.index}}">
						</span>
					{% endif %}
					<span class="m-breadcrumb__item-arrow">
						{% include '@a-svg-icon' with {
							modifiers: ['stroked', 'small'], data: { name: 'arrow-right' }
						} %}
					</span>
				</li>
			{% endfor %}
		</ol>
	</nav>
</div>
