<div class="m-language-switcher{% if modifier %} m-language-switcher--{{ modifier }}{% endif %}" data-c-name="LanguageSwitcher">
	<ul class="m-language-switcher__list">
		{% for item in data.items %}
			<li class="m-language-switcher__item{% if item.active %} m-language-switcher__item--active{% endif %}">
				<a aria-label="{{ item.label }}" class="m-language-switcher__link" href="{{ item.url }}">{{ item.shortLabel }}</a>
			</li>
		{% endfor %}
	</ul>
</div>
