<div class="m-button-show-more{% if modifier %} m-button-show-more--{{ modifier }}{% endif %}" data-c-name="ButtonShowMore">

	{% if data.initialChars > 0 %}
		<div class="m-button-show-more__content-excerpt" data-excerpt data-initial-chars="{{ data.initialChars }}">

		</div>
	{% endif %}

	<div class="m-button-show-more__content" data-content>
		{{ data.content | raw }}
	</div>

	{% if data.expandLabel %}
		<button class="m-button-show-more__expand-button" data-expand>
			{{ data.expandLabel }}
			<span class="m-button-show-more__icon">
				{% include '@a-svg-icon' with { modifiers: ['small', 'stroked'], data: { name: 'plus' } } %}
			</span>
		</button>
	{% endif %}

	{% if data.collapseLabel %}
		<button class="m-button-show-more__collapse-button" data-collapse>
			{{ data.collapseLabel }}
			<span class="m-button-show-more__icon">
				{% include '@a-svg-icon' with { modifiers: ['small', 'stroked'], data: { name: 'minus' } } %}
			</span>
		</button>
	{% endif %}
</div>
