<div class="m-video-player" data-c-name="VideoPlayer">
	<div class="m-video-player__wrapper js-m-video-player">
		<img class="m-video-player__image js-m-video-player__image" src="{{ data.image }}">
		<div class="m-video-player__play-button js-m-video-player__play-button">
			{% include '@a-svg-icon' with {
				data: { name: 'play-colored' },
				modifiers: ['huge', 'strocked'],
			} %}
		</div>
		<div class="m-video-player__iframe-wrapper js-m-video-player__wrapper">
			<iframe data-src="//www.youtube.com/embed/{{ data.id }}?autohide=2&amp;border=0&amp;wmode=opaque&amp;enablejsapi=1&amp;controls=0&amp;showinfo=0"
			        frameborder="0"
			        width="560"
			        height="315"
			        class="m-video-player__youtube-iframe js-m-video-player__youtube-iframe">
			</iframe>
		</div>
	</div>
</div>
