<div class="m-form-field-date{% if modifier %} m-form-field-date--{{ modifier }}{% endif %}" data-c-name="FormFieldDate" data-validate>
	<label class="m-form-field-date__label{% if data.required %} m-form-field-date__label--required{% endif %}" for="{{ data.id }}">{{ data.label}}</label>
	{% if data.sublabel %}<span class="m-form-field-date__sublabel">{{ data.sublabel }}</span>{% endif %}
	<fieldset id="{{ date.id }}" class="m-form-field-date__field-wrap">
		<input class="m-form-field-date__input m-form-field-date__input-day js-m-form-field-date__input-day js-m-form-field-date"
			required
			type="tel"
			maxlength="2"
			placeholder="{{ data.placeholderDay }}"
			data-parsley-errors-container=".m-form-field-date__error"
			data-parsley-required-message="{{ data.validation.parsleyRequiredMessage }}"
			{% if data.validation.group %}data-parsley-group="{{ data.validation.group }}"{% endif %}
			{% if data.validation.parsleyTriggerAfterFailure %}data-parsley-trigger-after-failure="{{ data.validation.parsleyTriggerAfterFailure }}"{% endif %}
			{% if data.validation.errorMessage %}data-parsley-error-message="{{ data.validation.errorMessage }}"{% endif %}
			data-parsley-custom-date
			data-parsley-custom-date-message="{{ data.validation.parsleyCustomDateMessage }}"
			{% if data.validation.dayMin %}data-parsley-min="{{ data.validation.dayMin }}"{% endif %}
			{% if data.validation.dayMax %}data-parsley-max="{{ data.validation.dayMax }}"{% endif %}
			{% if data.validation.dayMinMessage %}data-parsley-min-message="{{ data.validation.dayMinMessage }}"{% endif %}
			{% if data.validation.dayMaxMessage %}data-parsley-max-message="{{ data.validation.dayMaxMessage }}"{% endif %}
		/>

		<span class="m-form-field-date__space">.</span>

		<input class="m-form-field-date__input m-form-field-date__input-month js-m-form-field-date__input-month js-m-form-field-date"
			required
			type="tel"
			maxlength="2"
			placeholder="{{ data.placeholderMonth }}"
			data-parsley-required-message=""
			data-parsley-errors-container=".m-form-field-date__error"
			{% if data.validation.parsleyCustomDateCheck %}data-parsley-custom-date{% endif %}
			{% if data.validation.parsleyCustomDateCheck %}data-parsley-custom-date-message=""{% endif %}
			{% if data.validation.group %}data-parsley-group="{{ data.validation.group }}"{% endif %}
			{% if data.validation.parsleyTriggerAfterFailure %}data-parsley-trigger-after-failure="{{ data.validation.parsleyTriggerAfterFailure }}"{% endif %}
			data-parsley-custom-date
			data-parsley-custom-date-message=""
			{% if data.validation.monthMin %}data-parsley-min="{{ data.validation.monthMin }}"{% endif %}
			{% if data.validation.monthMax %}data-parsley-max="{{ data.validation.monthMax }}"{% endif %}
			{% if data.validation.monthMinMessage %}data-parsley-min-message="{{ data.validation.monthMinMessage }}"{% endif %}
			{% if data.validation.monthMaxMessage %}data-parsley-max-message="{{ data.validation.monthMaxMessage }}"{% endif %}
		/>

		<span class="m-form-field-date__space">.</span>

		<input class="m-form-field-date__input m-form-field-date__input-year js-m-form-field-date__input-year js-m-form-field-date"
			required
			type="tel"
			minlength="2"
			maxlength="4"
			placeholder="{{ data.placeholderYear }}"
			data-parsley-required-message=""
			data-parsley-errors-container=".m-form-field-date__error"
			data-parsley-custom-date
			data-parsley-custom-date-message=""
			{% if data.validation.group %}data-parsley-group="{{ data.validation.group }}"{% endif %}
			{% if data.validation.parsleyTriggerAfterFailure %}data-parsley-trigger-after-failure="{{ data.validation.parsleyTriggerAfterFailure }}"{% endif %}
			{% if data.validation.parsleyErrorMessage %}data-parsley-error-message="{{ data.validation.parsleyErrorMessage }}"{% endif %}
			{% if data.validation.yearMin %}data-parsley-min="{{ data.validation.yearMin }}"{% endif %}
			{% if data.validation.yearMinMessage %}data-parsley-min-message="{{ data.validation.yearMinMessage }}"{% endif %}
			{% if data.validation.yearMax %}data-parsley-max="{{ data.validation.yearMax }}"{% endif %}
			{% if data.validation.yearMaxMessage %}data-parsley-max-message="{{ data.validation.yearMaxMessage }}"{% endif %}
		/>

		<div class="m-form-field-date__error"></div>

	</fieldset>
</div>
