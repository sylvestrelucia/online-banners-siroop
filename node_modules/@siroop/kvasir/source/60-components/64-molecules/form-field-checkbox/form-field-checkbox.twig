<div class="m-form-field-checkbox{% if modifier %} m-form-field-checkbox--{{ modifier }}{% endif %}">
	{% if data.customInput == false %}
		<input class="m-form-field-checkbox__input" id="{{data.id}}" type="checkbox" name="{{data.name}}"{% if modifier == 'disabled' %} disabled{% endif %}>
	{% endif %}
	<label class="m-form-field-checkbox__label" for="{{data.id}}">
		<span class="m-form-field-checkbox__icon m-form-field-checkbox__icon-checked">
			{% include '@a-svg-icon' with {
					data: {
						name: 'checkbox-checked'
					},
					modifiers: ['medium', 'stroked-thin']
				}
			%}
		</span>
		<span class="m-form-field-checkbox__icon m-form-field-checkbox__icon-unchecked">
			{% include '@a-svg-icon' with {
					data: {
						name: 'checkbox-unchecked'
					},
					modifiers: ['medium', 'stroked-thin']
				}
			%}
		</span>
		<span class="m-form-field-checkbox__label-text">{{ data.label|raw }}</span>
	</label>
</div>
