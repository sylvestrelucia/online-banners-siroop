<button class="m-filter-pill{% if modifier %} m-filter-pill--{{ modifier }}{% endif %}" data-c-name="FilterPill">
	<span class="m-filter-pill__wrap">
		<span class="m-filter-pill__text">{{ data.text | raw }}</span>
		<span class="m-filter-pill__icon">
			{% include "@a-svg-icon" with {
				modifiers: ['small', 'stroked-thin'],
				data: {
					name: 'close'
				}
			}%}
		</span>
	</span>
</button>
