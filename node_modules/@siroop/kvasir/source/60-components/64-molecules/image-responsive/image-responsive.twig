<div class="m-image-responsive{% if modifier %} m-image-responsive--{{ modifier }}{% endif %}" data-c-name="ImageResponsive">
	<img
		class="m-image-responsive__image"
		src="{{ data.src }}"
		srcset="{{ data.srcsetString|default }}"
		alt="{{ data.alt|default }}"
		{% if data.sizes | default %} sizes="{{ data.sizes|default }}"{% endif %}
		data-thumbnail="{{ data.src }}"
	/>
	<noscript>
		<img class="m-image-responsive__image m-image-responsive__image--no-js" src="{{ data.src }}" />
	</noscript>
</div>

