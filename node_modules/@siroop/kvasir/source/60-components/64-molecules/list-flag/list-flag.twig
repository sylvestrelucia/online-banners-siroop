<div class="m-list-flag{% if modifier %} m-list-flag--{{ modifier }}{% endif %}">
	<ul class="m-list-flag__container">
		{% for item in data.items %}
			<li class="m-list-flag__item">
				{% if item.url %}<a href="{{ item.url }}">{% endif %}
					{% if item.icon %}
						<i class="m-list-flag__item-icon">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked', 'large'],
								data: {
									name: item.icon.name|default
								}
							} %}
						</i>
					{% endif %}
					{% if item.image %}
						<div class="m-list-flag__image-wrap">
							<img class="m-list-flag__image" src="{{ item.image.src }}" alt="">
						</div>
					{% endif %}
					<div class="m-list-flag__text">
						<span class="m-list-flag__title">{{ item.title | raw }}</span><br>
						{% if item.description|default(false) %}
							<span class="m-list-flag__description">{{ item.description | raw }}</span>
						{% endif %}
					</div>
					{% if item.url %}
					<div class="m-list-flag__arrow">
						{% include '@a-svg-icon' with {
						modifiers: ['stroked-thin'],
							data: {
								name: 'arrow-right'
							}
						} %}
					</div>
					{% endif %}
				{% if item.url %}</a>{% endif %}
			</li>
		{% endfor %}
	</ul>
</div>
