<div class="m-button-list{% if modifier %} m-button-list--{{ modifier }}{% endif %}" data-c-name="button-list">
	<ul class="m-button-list__wrapper">
		{% for item in data %}
			{% if item.title and item.url %}
				<li class="m-button-list__item">
					<a href="{{ item.url }}" class="m-button-list__link">{{ item.title }} {% if item.subtitle %}({{ item.subtitle }}){% endif %}</a>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
</div>
