<div class="m-button-show-more-items{% if modifier %} m-button-show-more-items--{{ modifier }}{% endif %}" data-c-name="ButtonShowMoreItems" data-initial-items="{{ data.initialItems }}"{% if data.showMoreItems %} data-show-more-items="{{ data.showMoreItems }}"{% endif %}>
	<button class="m-button-show-more-items__expand-button js-m-button-show-more-items__expand-button is-hidden">
		{{ data.expandLabel }}
		<div class="m-button-show-more-items__icon">
			{% include '@a-svg-icon' with { modifiers: ['small', 'stroked'], data: { name: 'plus' } } %}
		</div>
	</button>
	<button class="m-button-show-more-items__collapse-button js-m-button-show-more-items__collapse-button is-hidden">
		{{ data.collapseLabel }}
		<div class="m-button-show-more-items__icon">
			{% include '@a-svg-icon' with { modifiers: ['small', 'stroked'], data: { name: 'minus' } } %}
		</div>
	</button>
</div>
