<div class="m-teaser-item{% if modifier %} m-teaser-item--{{ modifier }}{% endif %}" data-c-name="TeaserItem">
	<a class="m-teaser-item__link" href="{{ data.url }}"
		{% if data.tealium|default %}
			{% for key, value in data.tealium %}
				{% if value is empty %}
					{{ key }}
				{% else %}
					{{ key }}="{{ value }}"
				{% endif %}
			{% endfor %}
		{% endif %}>
		<div class="m-teaser-item__container">
			{% if data.backgroundImage|default %}
				<div class="m-teaser-item__background">
					{% include '@m-image-responsive' with { data: data.backgroundImage } %}
				</div>
			{% endif %}
				{% if data.featuredImage|default %}
					<div class="m-teaser-item__image">
						{% include '@m-image-responsive' with { data: data.featuredImage } %}
					</div>
				{% endif %}

		</div>
		<div class="m-teaser-item__content" style="{% if data.textColor|default %}color: {{ data.textColor }}{% endif %}">
			{% if data.title %}
				<h3 class="m-teaser-item__title">{{ data.title }}
					{% if data.titleSuffix|default %}
						<span class="m-teaser-item__subtitle">
						({{ data.titleSuffix }})
						</span>
					{% endif %}
				</h3>
			{% endif %}
			{% if data.tag %}
				<h4 class="m-teaser-item__tag">{{ data.tag }}</h4>
			{% endif %}
		</div>
	</a>
</div>
