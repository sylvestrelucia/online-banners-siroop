<picture class="m-picture{% if modifier %} m-picture--{{ modifier }}{% endif %}" data-c-name="Picture">
	<source
		media="({{ data.mediaQueries.small.query }})"
		srcset="{{ data.images.small.src }}">
	<source
		media="({{ data.mediaQueries.large.query }})"
		srcset="{{ data.images.large.src }}">

	<img
			src="{{ data.src }}"
			alt="{{ data.alt }}"
			class="m-picture__image">
</picture>
