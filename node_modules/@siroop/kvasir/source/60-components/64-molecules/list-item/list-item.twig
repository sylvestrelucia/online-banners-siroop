{% set modifierPrice = modifierPrice is defined and modifierPrice is not empty ? modifierPrice : 'large' %}

<div class="m-list-item{% if modifier %} m-list-item--{{ modifier }}{% endif %}" data-c-name="ListItem">

	<a class="m-list-item__link" href="{{ data.url }}">

		<div class="m-list-item__image-wrap">
			{% if data.images is iterable %}
				{% include '@m-image-responsive' with { data: data.images[0], modifier: 'ratio-1-1' } %}
			{% else %}
				{% include '@m-image-responsive' with { data: data.images, modifier: 'ratio-1-1' } %}
			{% endif %}
		</div>

		{% if data.price.priceDrop %}
			<div class="m-list-item__price-drop">
				{% include '@m-price-drop' %}
			</div>
		{% endif %}

		<div class="m-list-item__wrap">
			{% if data.title|default %}
				<div class="m-list-item__title">
					<span class="m-list-item__text">
						{{ data.title }}
					</span>
					{% if data.mainAttributes|default %}
						<ul class="m-list-item__subtext">
							{% for attribute in data.mainAttributes %}
								<li class="m-list-item__subtext-item">
									<b>{{ attribute.key }}</b>: {{ attribute.value }}
								</li>
							{% endfor %}
						</ul>
					{% endif %}
				</div>
			{% endif %}

			{% if data.price|default %}
				<div class="m-list-item__subtitle">
					{% if data.price is iterable %}
						{% include '@m-price' with { data: data.price, modifier: modifierPrice } %}
					{% else %}
						{{ data.price }}
					{% endif %}
				</div>
			{% endif %}
		</div>

	</a>

</div>
