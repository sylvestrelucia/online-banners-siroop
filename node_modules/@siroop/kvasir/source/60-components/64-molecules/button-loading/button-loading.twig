<button class="m-button-loading{% if modifier %} m-button-loading--{{ modifier }}{% endif %} {{ data.buttonClass }} js-m-button-loading" data-c-name="ButtonLoading">
	{{ data.text }}
	{% if data.icon %}
		<span class="m-button-loading__button-icon js-m-button-loading__button-icon">
			{% include '@a-svg-icon' with {
				data: { name: data.icon },
				modifiers: ['stroked', 'top']
			} %}
		</span>
	{% endif %}
	<div class="m-button-loading__loading-spinner m-button-loading__loading-spinner--small js-m-button-loading__loading-spinner is-hidden">
		<div class="m-button-loading__loading-spinner-rotate m-button-loading__loading-spinner-rotate--small">
			<div class="m-button-loading__loading-spinner-pin m-button-loading__loading-spinner-pin--small"></div>
		</div>
	</div>
</button>
