<div class="m-usp-banner{% if modifier %} m-usp-banner--{{ modifier }} js-m-usp-banner--{{ modifier }}{% endif %}"
	 data-c-name="UspBanner">
	<div class="m-usp-banner__container js-m-usp-banner__container">
		{% for item in data.items %}
			<div class="m-usp-banner__item">
				<i class="m-usp-banner__item-icon">
					{% include '@a-svg-icon' with {
						modifiers: item.icon.modifiers|default,
							data: {
							name: item.icon.name|default
						}
					} %}
				</i>
				<p class="m-usp-banner__text">
					<span class="m-usp-banner__title">{{ item.title | raw }}&nbsp;</span>
					{% if item.description|default(false) %}
						<span class="m-usp-banner__description">{{ item.description | raw }}</span>
					{% endif %}
				</p>
			</div>
		{% endfor %}
	</div>
</div>
