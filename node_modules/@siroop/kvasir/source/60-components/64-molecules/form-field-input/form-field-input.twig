<div class="m-form-field-input{% if modifier %} m-form-field-input--{{ modifier }}{% endif %}" data-c-name="FormFieldInput">
<label class="m-form-field-textarea__label" for="{{ data.id }}">{{ data.label}}
	{% if data.sublabel %}<span class="m-form-field-input__sublabel">{{ data.sublabel }}</span>{% endif %}
</label>
<input
	class="m-form-field-input__input"
	id="data.id"
	type="{{ data.options.type }}"
	name="{{ data.name }}"
	{% if data.placeholder %}placeholder="{{ data.placeholder }}"{% endif %}
	{% if data.autocomplete %}autocomplete="{{ data.autocomplete }}"{% endif %}
	{% if data.options.required %}required{% endif %}
	{% if data.options.disabled %}disabled{% endif %}
	{% if data.options.minlength %} minlength="{{ data.options.minlength }}"{% endif %}
	{% if data.options.maxlength %} maxlength="{{ data.options.maxlength }}"{% endif %} />
</div>
