<div class="m-input-quantity{% if modifier %} m-input-quantity--{{ modifier }}{% endif %}" data-c-name="InputQuantity">
	<span class="m-input-quantity__button-wrap js-m-input-quantity__button-wrap is-hidden">
		<button data-quantity="minus"
				aria-label="subtract 1"
				class="m-input-quantity__button m-input-quantity__button-minus js-m-input-quantity__button-minus"
				type="button"
				{% if data.initialValue <= data.minValue %}
					disabled="disabled"
				{% endif %}>
			<svg class="a-svg-icon a-svg-icon--small a-svg-icon--stroked-bold">
				<use xlink:href="#minus"></use>
			</svg>
		</button>
	</span>
	<input aria-label="Current value" role="alert" aria-live="assertive" type="number" name="quantity" class="m-input-quantity__input js-m-input-quantity__input" value="{{ data.initialValue }}" min="{{ data.minValue }}" max="{{ data.maxValue }}" >
	<span class="m-input-quantity__button-wrap">
		<button data-quantity="plus"
				aria-label="add 1"
				class="m-input-quantity__button m-input-quantity__button-plus js-m-input-quantity__button-plus"
				type="button"
				{% if data.initialValue >= data.maxValue %}
					disabled="disabled"
				{% endif %}>
			<svg class="a-svg-icon a-svg-icon--small a-svg-icon--stroked-bold">
				<use xlink:href="#plus"></use>
			</svg>
		</button>
	</span>
</div>
