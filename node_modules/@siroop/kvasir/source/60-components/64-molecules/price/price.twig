<div class="m-price{% if modifier %} m-price--{{ modifier }}{% endif %}">
	{% if data.pricePrefix %}
		<span class="m-price__from">{{ data.pricePrefix }}</span>
	{% endif %}

	{% if data.priceCurrency %}
		<span class="m-price__currency">{{ data.priceCurrency }}</span>
	{% endif %}

	<span class="m-price__value">{{ data.priceValue }}</span>

	{% if data.priceSuffix %}
		<span class="m-price__after">{{ data.priceSuffix }}</span>
	{% endif %}
</div>
