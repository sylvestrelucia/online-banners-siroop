<div class="m-banner{% if modifier %} m-banner--{{ modifier }}{% endif %}">

	{% if data.image|default %}
		<div class="m-banner__image">
			{% include '@m-picture' with {data: data.image} %}
		</div>
	{% endif %}

	{% if data.cinemagraph|default %}
		<div class="m-banner__cinemagraph">
			{% include '@m-cinemagraph' with {data: data.cinemagraph} %}
		</div>
	{% endif %}

	<div class="m-banner__content">
		{% if data.title|default %}
			<div class="m-banner__title">
				{{ data.title|raw }}
			</div>
		{% endif %}

		{% if data.body|default %}
			<div class="m-banner__body">
				{{ data.body }}
			</div>
		{% endif %}

		{% if data.url|default %}
			{% if data.more.text|default %}
				<div class="m-banner__meta">
					<a class="m-banner__meta-link" href="{{ data.url }}"
					{% if data.tealium|default %}
						{% for key, value in data.tealium %}
							{% if value is empty %}
								{{ key }}
							{% else %}
								{{ key }}="{{ value }}"
							{% endif %}
						{% endfor %}
					{% endif %}>
					{{ data.more.text }}
					</a>
				</div>
			{% endif %}
		{% endif %}
	</div>

	{% if data.more.text is empty %}
		<a class="m-banner__link-wrap" href="{{ data.url }}"
		{% if data.tealium|default %}
			{% for key, value in data.tealium %}
				{% if value is empty %}
					{{ key }}
				{% else %}
					{{ key }}="{{ value }}"
				{% endif %}
			{% endfor %}
		{% endif %}
		>
		</a>
	{% endif %}
</div>
