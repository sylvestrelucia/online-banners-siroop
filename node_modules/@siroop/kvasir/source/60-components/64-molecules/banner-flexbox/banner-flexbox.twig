<div class="m-banner-flexbox{% if modifier %} m-banner-flexbox--{{ modifier }}{% endif %}">
	{% if data.showImage %}
		<div class="m-banner-flexbox__image">
			{% include '@m-picture' with { data: data.image.image } %}
		</div>
	{% endif %}

	{% if data.showCinemagraph %}
		<div class="m-banner-flexbox__cinemagraph">
			{% include '@m-cinemagraph' with { data: data.image.cinemagraph } %}
		</div>
	{% endif %}

	{% if data.image.title %}
		<div class="m-banner-flexbox__content">
			{% if data.image.title %}
				<div class="m-banner-flexbox__title">
					{{ data.image.title|raw }}
				</div>
			{% endif %}

			{% if data.image.body %}
				<div class="m-banner-flexbox__body">
					{{ data.image.body }}
				</div>
			{% endif %}
		</div>
	{% endif %}

	{% if data.image.url %}
        <a class="m-banner-flexbox__link-wrap" href="{{ data.image.url }}"
			{% if data.tealium|default %}
			{% for key, value in data.tealium %}
			{% if value is empty %}
			{{ key }}
			{% else %}
			{{ key }}="{{ value }}"
			{% endif %}
			{% endfor %}
			{% endif %}>
        </a>
    {% endif %}
</div>

