<div class="m-searchbar{% if modifier %} m-searchbar--{{modifier}}{% endif %}" data-c-name="SearchBar">
	<div class="m-searchbar__input-wrap">
		<input type="search" aria-label="{{ data.input.label }}" class="m-searchbar__input" placeholder="{{ data.input.placeholder }}" />
	</div>
	<button class="m-searchbar__search-button" aria-label="{{ data.button.label }}">
		{% include '@a-svg-icon' with {
			modifiers: ['stroked'],
			data: {
				name: 'search'
			}
		} %}
	</button>
</div>
