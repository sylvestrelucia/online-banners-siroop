<ul class="m-step-navigation{% if modifier %} m-step-navigation--{{ modifier }}{% endif %}" data-c-name="StepNavigation">
	{% for step in data.steps %}
		<li class="m-step-navigation__step{% if step.completed %} m-step-navigation__step--completed{% endif %}{% if step.active %} m-step-navigation__step--active{% endif %}">
			{% if step.url|default %}
				<a class="m-step-navigation__wrap" href="{{ step.url }}">
					<span class="m-step-navigation__counter">
						{% if step.completed|default %}
							{% include '@a-svg-icon' with {
								modifiers: ['stroked', 'small'],
								data: {
									name: 'checkmark'
								}
							} %}
						{% endif %}
					</span>
					<span class="m-step-navigation__text">{{ step.name }}</span>
				</a>
			{% else %}
				<span class="m-step-navigation__wrap">
					<span class="m-step-navigation__counter"></span>
					<span class="m-step-navigation__text">{{ step.name }}</span>
				</span>
			{% endif %}
		</li>
	{% endfor %}
</ul>
