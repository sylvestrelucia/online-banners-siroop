<div class="m-voucher-box{% if modifier %} m-voucher-box--{{ modifier }}{% endif %}" data-c-name="VoucherBox">
	<div class="m-voucher-box__header">{{ data.title }}</div>
	<div class="m-voucher-box__container">
		<div class="m-voucher-box__discount">{{ data.discount }}</div>
		<div class="m-voucher-box__content">
			<div class="m-voucher-box__title">
			<span class="m-voucher-box__title-text">
				{{ data.description }}
			</span>
			<span class="m-voucher-box__tooltip" data-tooltip="{{ data.tooltip.text }}">
				{% include '@a-svg-icon' with {
				modifiers: ['stroked', 'medium'], data: { name: 'info-filled' }
				} %}
			</span>
			</div>
			<div class="m-voucher-box__deadline js-m-voucher-box__deadline" data-counter-time="{{ data.counterTime }}">
				{{ data.labelValidUntil }}
				<span class="m-voucher-box__deadline-time js-m-voucher-box__deadline-time">
				</span>
			</div>
			<div class="m-voucher-box__label-expired js-m-voucher-box__label-expired">
				{{ data.labelExpired }}
			</div>
			<button class="m-voucher-box__remove-button" type="submit">
				{% include '@a-svg-icon' with {
				modifiers: ['stroked', 'small'], data: { name: 'trash' }
				} %}
				<span class="m-voucher-box__remove-text">{{ data.buttonRemove.text }}</span>
			</button>
		</div>
	</div>
</div>
