<div class="m-form-field-radio{% if modifier %} m-form-field-radio--{{ modifier }}{% endif %}">
	<label class="m-form-field-radio__label">{{ data.title }}</label>
	<ul class="m-form-field-radio__list">
		{% for item in data.items %}
			<li class="m-form-field-radio__list-item">
				<label class="m-form-field-radio__label-radio" for="{{ item.id }}">
					<input class="m-form-field-radio__input m-form-field-radio__input-hidden"
						type="radio" id="{{ item.id }}"
						name="{{ item.name }}"
						value="{{ item.value }}"
						{% if item.options.required %} required{% endif %}
						{% if item.options.disabled %} disabled{% endif %}
						{% if item.options.checked %} checked{% endif %}/>
					<div class="m-form-field-radio__wrap">
						<div class="m-form-field-radio__icon m-form-field-radio__icon--checked">
							{% include '@a-svg-icon' with {
									data: {
										name: 'radio-checked'
									},
									modifiers: ['medium', 'stroked-thin']
								}
							%}
						</div>
						<div class="m-form-field-radio__icon m-form-field-radio__icon--unchecked">
							{% include '@a-svg-icon' with {
									data: {
										name: 'radio-unchecked'
									},
									modifiers: ['medium', 'stroked-thin']
								}
							%}
						</div>
						<div class="m-form-field-radio__text">
							<div class="m-form-field-radio__name">{{ item.label }}</div>
							{% if item.desc|default %}
								<div class="m-form-field-radio__desc">{{ item.desc }}</div>
							{% endif %}

							<div class="m-form-field-radio__wrap-inner">
								{% if item.svgs|default %}
									<div class="m-form-field-radio__svg">
										{% for svg in item.svgs %}
											<svg class="mat-svg__svg o-cart-aside__payment-method-icon">
												<use xlink:href="#{{ svg }}"></use>
											</svg>
										{% endfor %}
									</div>
								{% endif %}

								{% if item.text|default %}
									<div class="m-form-field-radio__alt-text">{{ item.text|raw }}</div>
								{% endif %}
							</div>

							{% if item.options.delete|default %}
								<a href="#" class="m-form-field-radio__remove-button" type="submit">
									<span class="m-form-field-radio__remove-icon">
										{% include '@a-svg-icon' with {
											data: { name: 'trash' },
											modifiers: ['small', 'stroked']
										} %}
										{{ item.options.delete }}
									</span>
								</a>
							{% endif %}

						</div>
					</div>
				</label>
			</li>
		{% endfor %}
	</ul>
</div>
