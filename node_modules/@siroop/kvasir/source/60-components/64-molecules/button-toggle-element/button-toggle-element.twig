<div class="m-button-toggle-element{% if modifier %} m-button-toggle-element--{{ modifier }}{% endif %}" data-c-name="ButtonToggleElement">
	 {# Button type needed in order to prevent a JS error https://stackoverflow.com/questions/12325066/button-click-event-fires-when-pressing-enter-key-in-different-input-no-forms #}
	<button type="button" class="m-button-toggle-element__toggle-button"{% if data.toggleTarget %} data-target-to-toggle="{{ data.toggleTarget }}" data-toggle{% endif %}>
		{{ data.toggleLabel }}
		<div class="m-button-toggle-element__icon">
			{% include '@a-svg-icon' with { modifiers: ['small', 'stroked'], data: { name: 'plus' } } %}
		</div>
	</button>
</div>
