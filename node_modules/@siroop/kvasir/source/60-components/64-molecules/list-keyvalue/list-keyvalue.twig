{% macro content(data) %}
	{% for item in data.items %}
		{% if item.loop.index0|default %}
			<header class="m-list-keyvalue__row m-list-keyvalue__row-head">
				<div class="m-list-keyvalue__col">{{ item.key }}</div>
				<div class="m-list-keyvalue__col">{{ item.value }}</div>
			</header>
		{% else %}
			<div class="m-list-keyvalue__row m-list-keyvalue__row-col js-m-list-keyvalue__row-col">
				<div class="m-list-keyvalue__col">{{ item.key }}</div>
				<div class="m-list-keyvalue__col">{{ item.value | raw }}</div>
			</div>
		{% endif %}
	{% endfor %}
{% endmacro content %}

{% import _self as list %}

<section class="m-list-keyvalue{% if modifier %} m-list-keyvalue--{{modifier}}{% endif %}">
	{% if data.readmore or data.readmoreLimit %}
		{% embed "@m-button-show-more" with { expandLabel: "Read More", collapseLabel: "Read less", initialChars: data.readmoreLimit } %}
			{% block content %}
				{{ list.content(data) }}
			{% endblock %}
		{% endembed %}
	{% else %}
		{{ list.content(data) }}
	{% endif %}
</section>
