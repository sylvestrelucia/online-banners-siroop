<div class="m-pagination{% if modifier %} m-pagination--{{ modifier }}{% endif %}" data-c-name="Pagination">
		<nav class="m-pagination__wrap" role="navigation">

			<div class="m-pagination__prev">
				{% if data.currentPage > 1 %}
					<a class="m-pagination__link m-pagination__prev-link" href="{{ data.paginationPath }}{{ data.currentPage - 1 }}" aria-label="{{ data.prev }}">
						<span class="m-pagination__prev-icon">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked-thin', 'small'],
								data: {
									name: 'arrow-left'
								}
							} %}
						</span>
						<span class="m-pagination__prev-text">zur√ºck</span>
					</a>
				{% endif %}
			</div>

			<ul class="m-pagination__list">

				{% for i in range(1, data.extremePagesLimit) if ( i < data.currentPage - data.nearbyPagesLimit ) %}
					<li class="m-pagination__item"><a class="m-pagination__link" href="{{ data.paginationPath }}{{ i }}">{{ i }}</a></li>
				{% endfor %}

				{% if data.extremePagesLimit + 1 < data.currentPage - data.nearbyPagesLimit %}
					<li  class="m-pagination__item">...</li>
				{% endif %}

				{% for i in range(data.currentPage - data.nearbyPagesLimit, data.currentPage - 1) if ( i > 0 ) %}
					<li class="m-pagination__item"><a class="m-pagination__link" href="{{ data.paginationPath }}{{ i }}">{{ i }}</a></li>
				{% endfor %}

				<li class="m-pagination__item m-pagination__desc">Seite {{ data.currentPage }} von {{ data.lastPage }}</li>

				<li class="m-pagination__item m-pagination__item--active">{{ data.currentPage }}</li>

				{% if data.currentPage < data.lastPage %}
					{% for i in range(data.currentPage + 1, data.currentPage + data.nearbyPagesLimit) if ( i <= data.lastPage ) %}
						<li class="m-pagination__item"><a class="m-pagination__link" href="{{ data.paginationPath }}{{ i }}">{{ i }}</a></li>
					{% endfor %}

					{% if  (data.lastPage - data.extremePagesLimit) > (data.currentPage + data.nearbyPagesLimit) %}
					   <li class="m-pagination__item">...</li>
					{% endif %}

					{% for i in range(data.lastPage - data.extremePagesLimit + 1, data.lastPage) if ( i > data.currentPage + data.nearbyPagesLimit ) %}
					   <li class="m-pagination__item"><a class="m-pagination__link" href="{{ data.paginationPath }}{{ i }}">{{ i }}</a></li>
					{% endfor %}
				{%  endif %}

			</ul>

			<div class="m-pagination__next">
				{% if data.currentPage < data.lastPage %}
					<a class="m-pagination__link m-pagination__next-link" href="{{ data.paginationPath }}{{ data.currentPage + 1 }}" aria-label="{{ data.next }}">
						<span class="m-pagination__next-text">weiter</span>
						<span class="m-pagination__next-icon">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked-thin', 'small'],
								data: {
									name: 'arrow-right'
									}
							} %}
						</span>
					</a>
				{% endif %}
			</div>

		</nav>
	</div>
