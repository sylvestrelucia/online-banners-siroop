<div class="m-cart-auth{% if modifier %} m-cart-auth--{{ modifier }}{% endif %}" data-c-name="CartAuth">
	<div class="m-cart-auth__auth-method">
		<button class="m-cart-auth__button m-cart-auth__button--checkout js-m-cart-auth__button--checkout"{% if data.buttons.checkout.disabled %} disabled{% endif %}>
			{{ data.buttons.checkout.text }}
		</button>

		<button class="m-cart-auth__button m-cart-auth__button--login js-m-cart-auth__button--login"{% if data.buttons.login.disabled %} disabled{% endif %}>
			{{ data.buttons.login.text }}
		</button>

		<button class="m-cart-auth__button m-cart-auth__button--guest js-m-cart-auth__button--guest"{% if data.buttons.asGuest.disabled %} disabled{% endif %}>
			{{ data.buttons.asGuest.text }}
		</button>
		<span class="m-cart-auth__notification"> {{ data.notification }}</span>
	</div>
</div>
