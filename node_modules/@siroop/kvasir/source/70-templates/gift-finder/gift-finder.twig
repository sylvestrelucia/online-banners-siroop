<div class="t-gift-finder{% if modifier %} t-gift-finder--{{ modifier }}{% endif %}" data-c-name="GiftFinder">

	<div class="obj-banner obj-banner--white">
		{% include '@m-button-back' with {
			data: { text: data.mobileBackButton.value },
			modifier: ' t-gift-finder__back-button'
		} %}
	</div>

	<div class="t-gift-finder__modal-display-button obj-banner--grey">
		{% include '@a-button-neutral' with {
			text: data.modalDisplayButton.value,
			modifier: ' t-gift-finder__modal-display-button'
		} %}
	</div>

	<div class="t-gift-finder__modal-header obj-banner obj-banner--grey obj-flag">
		<h1 class="t-gift-finder__modal-title obj-flag__body">
			{{ data.modalTitle }}
		</h1>

		<svg class="a-svg-icon a-svg-icon--medium a-svg-icon--stroked-thin obj-flag__image">
			<use xlink:href="#close"></use>
		</svg>
	</div>

	<section class="obj-banner obj-banner--grey">

		<div class="t-gift-finder__head">
			<div class="obj-wrapper obj-wrapper--medium">
				<svg class="a-svg-icon a-svg-icon--huge a-svg-icon--inline">
					<use xlink:href="#santa"></use>
				</svg>
				<h1 class="t-gift-finder__title">{{ data.title }}</h1>
				<h2 class="t-gift-finder__lead">{{ data.lead }}</h2>
			</div>
		</div>

		<div class="t-gift-finder__navigation obj-wrapper obj-wrapper--medium obj-clearfix u-margin-bottom">
			{% include '@o-profile-navigation' %}
		</div>

	</section>

	<section class="obj-banner obj-banner--white">
		<div class="t-gift-finder__pill-list obj-wrapper obj-wrapper--large">
			{% for pillItem in data.pillItems %}
					{% include '@o-pill-list' with { data: pillItem } %}
			{% endfor %}
		</div>

		{% if data.items %}
			<div>
				<div class="t-gift-finder__recommendations obj-wrapper obj-wrapper--large">
					{% include '@o-list' with { data: data.productList, modifier: 'grid' } %}
				</div>
			</div>
		{% else %}
			<div class="t-gift-finder__messages">
				<svg class="a-svg-icon a-svg-icon--x-huge a-svg-icon--inline">
					<use xlink:href="#santa-no-gift"></use>
				</svg>

				<h5>{{ data.noProducts.title }} </h5>
				<p class="u-margin-top">{{ data.noProducts.text }} </p>
			</div>
		{% endif %}

		<div class="t-gift-finder__modal-footer obj-banner obj-banner--grey">
			<button class="t-gift-finder__apply-button">
				{{ data.applyButton.value }}
			</button>

			<button class="t-gift-finder__discard-button">
				{{ data.discardButton.value }}
			</button>

		</div>
	</section>
</div>
