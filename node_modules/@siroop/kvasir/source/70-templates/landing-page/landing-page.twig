<div class="t-landing-page{% if modifier %} t-landing-page--{{ modifier }}{% endif %}" data-c-name="LandingPage">
	<div class="t-landing-page__banner">
		{% include '@m-banner-flexbox' with { modifier:'image', data: data.banner } %}
	</div>
	<div class="t-landing-page__wrap-content">
		<h1 class="t-landing-page__title">{{ data.title }}</h1>
	</div>
	<div class="t-landing-page__wrap">
		<div class="t-landing-page__product-list t-landing-page__product-list--promote">
			{% include '@o-list' with {data: productList, modifier: 'grid'} %}
		</div>
	</div>
	<div class="t-landing-page__body">
		{{ data.body|raw }}
	</div>
	<div class="t-landing-page__wrap">
		<div class="t-landing-page__product-list">
			{% include '@o-list' with {data: productListExtended, modifier: 'grid'} %}
		</div>
	</div>
</div>
