<div class="t-category-l1" data-c-name="CategoryL1">
	<div class="t-category-l1__body">
		<h1 class="t-category-l1__title">{{ data.title }}</h1>

		<div class="t-category-l1__row">

			<div class="t-category-l1__filters">
				<div class="t-category-l1__categories-title">
					{{ data.categoriesTitle }}
				</div>
				<div class="t-category-l1__categories">
					{% include '@o-link-list' with {
						modifier: data.modifier,
						data: {
							items: data.categories
						}
					} %}
				</div>
			</div>

			<div class="t-category-l1__results">
				<div class="t-category-l1__results-title">
					{{ data.productsTitle }}
				</div>
				<div class="t-category-l1__results-container">
					{% include '@o-list' with { modifier: 'grid', data: data.listProducts } %}
				</div>
			</div>

		</div>

	</div>
</div>
