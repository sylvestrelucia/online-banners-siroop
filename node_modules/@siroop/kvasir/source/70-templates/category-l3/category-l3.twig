<div class="t-category-l3" data-c-name="CategoryL3">

	<div class="t-category-l3__breadcrumb">
		{% if data.backToSearch %}
			{% include "@m-back-link" with { data: data.backToSearch } %}
		{% else %}
			{% include "@m-breadcrumb" with { data: { items: data.breadcrumb } } %}
		{% endif %}
	</div>

	<div class="t-category-l3__body">

		<h1 class="t-category-l3__title">{{ data.title }}</h1>

		{% if data.showLegalText %}
			<div class="t-category-l3__legal-text">{{ data.legalText }}</div>
		{% endif %}

		<div class="t-category-l3__row">

			<div class="t-category-l3__filters">

				<div class="t-category-l3__category-panel">

					<button class="t-category-l3__category-button">{{ data.categoriesLabel }}</button>

					<a class="t-category-l3__category-link" href="{{ data.previousCategoryLink }}">
						{{ data.previousCategoryLabel }}
					</a>

					{% include '@o-filter-panel' with { data: data.categories } %}
				</div>

				<div class="t-category-l3__filter-panel">
					<button class="t-category-l3__filter-button"{% if data.filters.activeFilters.count %} data-active-filters-count="{{ data.filters.activeFilters.count }}"{% endif %}>{{ data.filtersLabel }}</button>
					{% include '@o-filter-panel' with { data: data.filters } %}
				</div>

			</div>
			<div class="t-category-l3__results">

				{% if not data.hasResults %}
					<div class="t-category-l3__no-results">
						{{ data.noResultsMessage }}
					</div>
				{% endif %}

				{% if data.hasResults %}
					{% include '@o-list-header' with { data: data.listHeader } %}

					<div class="t-category-l3__results-list">
						{% include '@o-list' with { modifier: 'vertical', data: data.listProducts } %}
					</div>

					{% include '@o-list-footer' with { data: data.listFooter } %}
				{% endif %}
			</div>
		</div>
	</div>
</div>
