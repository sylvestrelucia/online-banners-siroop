<div class="t-series-page" data-c-name="SeriesPage">
	<div class="t-series-page__wrap">
		<div class="t-series-page__breadcrumb">
			{% include '@m-breadcrumb' with {data: data.breadcrumb} %}
		</div>
	</div>
	<div class="t-series-page__heading">
		{% include '@o-page-heading' with {data: data.brand, modifier: data.brand.headerImage ? 'inline' : 'without-heading-banner'} %}
	</div>
	<div class="t-series-page__wrap">
		<div class="t-series-page__product-list t-series-page__product-list--promote">
			{% include '@o-list' with {data: data.productList, modifier: 'grid'} %}
			{% include '@m-button-show-more-items' with { data: data.showMoreButton } %}
		</div>

		<span class="t-series-page__teaser-series-title">{{ data.teasers.title }}</span>
		<div class="t-series-page__teaser-series">
			{% include '@o-teaser-list' with { data: data.teasers } %}
		</div>
	</div>
	<div class="t-series-page__body">
		<div class="t-series-page__body-heading">
			<span class="t-series-page__body-title">{{ data.brand.name }}</span>
			<span class="t-brand-page__body-subtitle">{{ data.brand.slogan }}</span>
		</div>
		{{ data.body|raw }}

		<div class="t-brand-page__video">
			{% include '@m-video-player' with {data: data.video} %}
		</div>

		<div class="t-brand-page__gallery">
			{% include '@o-gallery' with { data: data.gallery } %}
		</div>
	</div>
</div>
