<div class="t-checkout" data-c-name="CheckoutPage">
	<div class="t-checkout__step-navigation">
		{% include '@m-step-navigation' with { data: data } %}
	</div>

	<div class="t-checkout__body">
		<form class="t-checkout__form js-t-checkout__form">
			{% include '@o-form-checkout' with { data: data.formCheckout } %}
			{% include '@m-button-loading' with {
				data: {
					buttonClass: 't-checkout__button-submit',
					icon: 'arrow-right',
					text: data.buttonSubmit
				}
			} %}
		</form>
	</div>
</div>
