<div class="t-pdp{% if modifier %} t-pdp--{{ modifier }}{% endif %}" data-c-name="Pdp">
	<div class="t-pdp__breadcrumb{% if data.backSearch %} is-hidden{% endif %}">
		{% include "@m-breadcrumb" with {
		data: {
		items: data.breadcrumb
		}
		} %}
	</div>
	{% if data.backSearch %}
		<div class="t-pdp__back-search">
			<a class="t-pdp__back-search-link" href={{ data.backSearch.url }}>
				<span class="t-pdp__back-search-arrow-back">
					{% include '@a-svg-icon' with {
						modifiers: ['stroked', 'small'], data: { name: 'arrow-left' }
					} %}
				</span>
				<span class="t-pdp__back-search-text">{{ data.backSearch.backText }} </span><span class="t-pdp__back-search-term">{{ data.backSearch.searchTerm }}</span>
			</a>
		</div>
	{% endif %}
	<div class="t-pdp__content">
		<div class="t-pdp__row">
			<div class="t-pdp__row-col-1">
				<div class="t-pdp__carousel">
					{% include "@o-gallery" with {
						data: data.carousel
					} %}
				</div>
			</div>
			<div class="t-pdp__row-col-2">
				<div class="t-pdp__desc-wrapper">

					{#{{ Variant PriceDrop }}#}
					<div class="t-pdp__price">
						<div class="t-pdp__price-info">
							{% include '@m-price--price-drop' with {
								data: {
									priceCurrency: data.price.priceCurrency,
									priceValue: data.price.priceDiscount,
									priceDrop: true
								},
								modifier: 'price-drop m-price--x-large'
							} %}
							<div class="t-pdp__price-drop-info">
								Bestpreis in letzten 30 Tage
							</div>
						</div>
						<div class="t-pdp__energy-label" data-a11y-dialog-show="{{ data.modalWindow.identifier }}">
							{% include "@m-energy-label" with {
								modifier: "lightgreen",
								data: {
									text: 'A',
									sup: '++',
								},
							} %}
						</div>

						{% include "@o-modal-window" with { data: data.modalWindow } %}
					</div>

					{#{{ End Variant PriceDrop }}#}

					<div class="t-pdp__price">
						<div class="t-pdp__price-info">
							{% if data.price.priceDiscount %}
								{% include '@m-price' with {
									data: {
										priceCurrency: data.price.priceCurrency,
										priceValue: data.price.priceDiscount,
									},
									modifier: 'xx-large m-price--reduced'
								} %}
							{% endif %}

							{% if data.price.priceDrop and not data.price.priceDiscount %}
								{% include '@m-price--price-drop' with {
									data: {
										priceCurrency: data.price.priceCurrency,
										priceValue: data.price.priceDiscount,
										priceDrop: true
									},
									modifier: 'price-drop m-price--x-large'
								} %}
							{% endif %}
						</div>
						<div class="t-pdp__energy-label" data-a11y-dialog-show="{{ data.modalWindow.identifier }}">
							{% include "@m-energy-label" with {
								modifier: "lightgreen",
								data: {
									text: 'A',
									sup: '++',
								},
							} %}
						</div>

						{% include "@o-modal-window" with { data: data.modalWindow } %}

						<div class="t-pdp__price-discounted-info">
							{% include '@m-price' with {
								data: {
									priceCurrency: data.price.priceCurrency,
									priceValue: data.price.priceValue,
								},
								modifier: 'striked'
							} %}
						</div>
					</div>
					<h1 class="t-pdp__title">{{ data.title }}</h1>
				</div>
				{% if data.groups.items|default %}
					<div class="t-pdp__groups">
						<div class="t-pdp__groups-title">
							<span class="t-pdp__groups-title-label">{{ data.groups.title }}:</span> <span
								class="t-pdp__groups-title-value">{{ data.groups.items[0].name }}</span>
						</div>
						<ul class="t-pdp__groups-items obj-swipe">
							{% for group in data.groups.items %}
								<li class="t-pdp__groups-item js-pdp__groups-item{% if loop.index == 1 %} t-pdp__groups-item-is-selected{% endif %}{% if group.disabled %} t-pdp__groups-item-is-disabled{% endif %} obj-swipe__item"
									data-modal-preview href="{{ group.url }}" data-tooltip="{{ group.name }}">

									<a class="t-pdp__groups-item-link" href="{{ group.url }}">
										<img class="t-pdp__groups-item-image" src="{{ group.image.src }}"
											 alt="{{ group.image.alt }}" title="{{ group.name }}">
									</a>
								</li>
							{% endfor %}
						</ul>
					</div>
				{% endif %}

				{% if data.variants|default %}

					{# Variant option for four and less items (Links) #}
					<div class="t-pdp__variants">
						<div class="t-pdp__variants-title">
							<span class="t-pdp__variants-title-label">{{ data.variants.title }}
								{% if data.variants.selectedVariantName %}
								:</span> <span
								class="t-pdp__variants-title-value">{{ data.variants.selectedVariantName }}</span>
							{% else %}
								</span> <span
								class="t-pdp__variants-title-value">{{ data.variants.labelChooseVariant }}</span>
							{% endif %}
						</div>
						<ul class="t-pdp__variants-items">
							{% for variant in data.variants.items | slice(0,5) %}
								{% if variant.is_label == false %}
									<li class="t-pdp__variants-item{% if variant.selected %} t-pdp__variants-item-is-selected{% endif %}{% if variant.disabled %} t-pdp__variants-item-is-disabled{% endif %} obj-swipe__item">
										<a class="t-pdp__variants-item-link" href="{{ variant.url }}">
											{{ variant.name }}
										</a>
									</li>
								{% endif %}
							{% endfor %}
						</ul>
					</div>

					{# Variant option for four and more items (Dropdown) #}
					<div class="t-pdp__variants js-t-pdp__variants--unselected">
						<div class="t-pdp__variants-title">
							<span class="t-pdp__variants-title-label">{{ data.variants.title }}
								{% if data.variants.selectedVariantName %}
								:</span> <span
								class="t-pdp__variants-title-value">{{ data.variants.selectedVariantName }}</span>
							{% else %}
								</span> <span
								class="t-pdp__variants-title-value">{{ data.variants.labelChooseVariant }}</span>
							{% endif %}
						</div>
						<div class="t-pdp__variants-items">
							{% include '@m-dropdown' with {
							data: {
							id: 'sort',
							name: 'bar',
							options: data.variants.items
							}
							} %}
						</div>
					</div>
				{% endif %}

				<div class="t-pdp__merchant-information">
					<div class="t-pdp__merchant-information-info">
						{% if data.merchantInfo.shippingDate|default %}
							<div class="t-pdp__merchant-information-stock">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked', 'medium'],
									data: {
										name: 'circle-check',
									}
								} %}
								{{ data.merchantInfo.labelInStock }}
							</div>
							<div class="t-pdp__merchant-information-shipping-date">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked', 'medium'],
									data: {
										name: 'sand-clock',
									}
								} %}
								{{ data.merchantInfo.shippingDate }}
							</div>
						{% else %}
							<div
								class="t-pdp__merchant-information-stock t-pdp__merchant-information-stock--out-of-stock">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked', 'medium'],
									data: {
										name: 'circle-close',
									}
								} %}
								{{ data.merchantInfo.labelOutOfStock }}
							</div>
						{% endif %}
					</div>
				</div>

				<div class="t-pdp__call-to-action">
					<div class="t-pdp__quantity">
						{% include "@m-input-quantity" with {
							data: {
								initialValue: '0',
								minValue: 1,
								maxValue: 5
							}
						} %}
					</div>
					<div class="t-pdp__cta-button">
						<button class="t-pdp__call-to-action-button js-t-pdp__call-to-action-button"
								data-shake-elements=".js-t-pdp__variants--unselected">{{ data.labelCartButton }}</button>
					</div>
				</div>

				<div class="t-pdp__wishlist">
					<noscript>
						<button class="t-pdp__wishlist-button js-t-pdp__call-to-action-button" data-shake-elements=".js-t-pdp__variants--unselected">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked'],
								data: {
									name: 'heart',
								}
							} %}
							{{ data.wishlist.text }}
						</button>
					</noscript>

					<div class="t-pdp__wishlist-checkbox">
						<input class="t-pdp__wishlist-checkbox-input" id="toggle-heart" type="checkbox"/>
						<label class="t-pdp__wishlist-checkbox-label" for="toggle-heart">
							<span class="t-pdp__wishlist-checkbox-icon">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked'],
									data: {
										name: 'heart',
									}
								} %}
							</span>
							{{ data.wishlist.text }}
						</label>
					</div>
				</div>

				{#{{ Variant Disabled }}#}
				<div class="t-pdp__call-to-action">
					<div class="t-pdp__title-out-of-stock">{{ data.labelOutOfStock }}</div>
					<div class="t-pdp__call-to-action-body">
						<div class="t-pdp__quantity">
							{% include "@m-input-quantity" with {
							data: {
							initialValue: '0',
							minValue: 1,
							maxValue: 5
							}
							} %}
						</div>
						<div class="t-pdp__cta-button">
							<button
								class="t-pdp__call-to-action-button t-pdp__call-to-action-button--disabled js-t-pdp__call-to-action-button"
								disabled data-tooltip="{{ data.labelOutOfStock }}">{{ data.labelCartButton }}</button>
						</div>
					</div>
				</div>
				{#{{ End Variant Disabled }}#}

				<div class="t-pdp__wishlist">
					<noscript>
						<button class="t-pdp__wishlist-button js-t-pdp__call-to-action-button" data-shake-elements=".js-t-pdp__variants--unselected">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked'],
								data: {
									name: 'heart',
								}
							} %}
							{{ data.wishlist.text }}
						</button>
					</noscript>

					<div class="t-pdp__wishlist-checkbox">
						<input class="t-pdp__wishlist-checkbox-input" id="toggle-heart" type="checkbox"/>
						<label class="t t-pdp__wishlist-checkbox-label" for="toggle-heart">
							<span class="t-pdp__wishlist-checkbox-icon">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked'],
									data: {
										name: 'heart',
									}
								} %}
							</span>
							{{ data.wishlist.text }}
						</label>
					</div>
				</div>

				{% if data.variants|default %}

					{# Variant option for four and more items (Dropdown) #}
					<div class="t-pdp__variants js-t-pdp__variants--unselected">
						<div class="t-pdp__variants-title">
							<span class="t-pdp__variants-title-label">{{ data.variants.title }}
								{% if data.variants.selectedVariantName %}
								:</span> <span
								class="t-pdp__variants-title-value">{{ data.variants.selectedVariantName }}</span>
							{% else %}
								</span> <span
								class="t-pdp__variants-title-value">{{ data.variants.labelChooseVariant }}</span>
							{% endif %}
						</div>
						<div class="t-pdp__variants-items">
							{% include '@m-dropdown' with {
								data: {
									id: 'sort',
									name: 'bar',
									options: data.variants.items
								}
							} %}
						</div>
					</div>
				{% endif %}

				<div class="t-pdp__call-to-action">
					<div class="t-pdp__cta-button t-pdp__cta-button--single">
						<button class="t-pdp__call-to-action-button js-t-pdp__call-to-action-button"
								data-shake-elements=".js-t-pdp__variants--unselected">{{ data.labelCartButton }}</button>
					</div>
				</div>

				<div class="t-pdp__wishlist t-pdp__wishlist--single">
					<noscript>
						<button class="t-pdp__wishlist-button js-t-pdp__call-to-action-button" data-shake-elements=".js-t-pdp__variants--unselected">
							{% include '@a-svg-icon' with {
								modifiers: ['stroked'],
								data: {
									name: 'heart',
								}
							} %}
							{{ data.wishlist.text }}
						</button>
					</noscript>

					<div class="t-pdp__wishlist-checkbox">
						<input class="t-pdp__wishlist-checkbox-input" id="toggle-heart" type="checkbox"/>
						<label class="t t-pdp__wishlist-checkbox-label" for="toggle-heart">
							<span class="t-pdp__wishlist-checkbox-icon">
								{% include '@a-svg-icon' with {
									modifiers: ['stroked'],
									data: {
										name: 'heart',
									}
								} %}
							</span>
							{{ data.wishlist.text }}
						</label>
					</div>
				</div>


				<div class="t-pdp__merchant-information">
					<div class="t-pdp__merchant-information-title">
						{{ data.labelMerchantInformationTitle }}

						<span class="t-pdp__merchant-information-tooltip"
							data-tooltip="{{ data.merchantInfo.merchantTooltip | raw }}">
							{% include '@a-svg-icon' with {
							modifiers: ['stroked', 'medium'], data: { name: 'info-filled' }
							} %}
						</span>
					</div>
					<div class="t-pdp__merchant-information-info">
						{% if data.merchantInfo.shippingDate|default %}
							<div class="t-pdp__merchant-information-more-info"><a
									href="#merchants">{{ data.merchantInfo.moreLabel }}</a></div>
						{% endif %}
					</div>
				</div>
			</div>
			<div class="t-pdp__row-col-3">
				<div class="t-pdp__description">
					<div class="t-pdp__description-content">
						{% include "@m-button-show-more" with {
						data: {
						expandLabel: "Read More",
						collapseLabel: "Read Less",
						buttonClass: "t-pdp__readmore",
						content: data.description,
						initialChars: 200,
						suffix: '...'
						}
						} %}
					</div>
				</div>
				<div class="t-pdp__main-attributes">
					<div class="t-pdp__main-attributes-title">
						{{ data.labelMainAttributes }}
					</div>
					<div class="t-pdp__mainattributes__list">
						{% include "@m-list-keyvalue" with {
						data: {
						items: data.mainAttributes
						}
						} %}
					</div>
				</div>
				<div class="t-pdp__specifications">
					<div class="t-pdp__specifications-title">
						{{ data.labelSpecifications }}
					</div>
					<div class="t-pdp__specifications__list">
						{% include "@m-list-keyvalue" with {
						data: {
						items: data.specifications,
						readmore: true,
						readmoreLimit: 200
						}
						} %}
					</div>
				</div>
				<div class="t-pdp__merchants" id="merchants">
					<div class="t-pdp__merchants-title">
						{{ data.labelMerchantInformationTitle }}
					</div>
					<div class="t-pdp__merchants-list">
						{% include "@o-merchant-selector" with {
						data: {
						sorting: data.merchants.sorting,
						merchants: data.merchants.products
						}
						} %}
					</div>
				</div>
				{% if rating|default %}
					<div class="t-pdp__rating">
						xxxxx
					</div>
				{% endif %}
			</div>
		</div>
		<div class="t-pdp__recommendations">
			<div class="t-pdp__recommendations-text">
				{{ data.recommendationsText }}
			</div>
			{% include '@o-list' with {data: data.productList, modifier: 'grid'} %}
		</div>
	</div>
</div>
