<div class="t-faq" data-c-name="Faq">
	<h1 class="t-faq__title">
		{{ data.title }}
	</h1>
	<div class="t-faq__categories">
		{% for item in data.categories %}
			<a href="{{ item.url }}" class="t-faq__category js-t-faq__category">
				{{ item.category }}
			</a>
		{% endfor %}
	</div>
	<div class="t-faq__content">
		{% for item in data.questions %}
			<div class="t-faq__item js-t-faq__item" data-faq-tag="{{ item.tag }}">
				<h2 class="t-faq__question">
					{{ item.question }}
				</h2>
				<span class="t-faq__answer">
					{{ item.answer | raw }}
				</span>
			</div>
		{% endfor %}
	</div>
</div>
