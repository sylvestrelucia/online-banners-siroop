<div class="t-checkout-payment{% if modifier %} t-checkout-payment--{{ modifier }}{% endif %}" data-c-name="CheckoutPayment">

	<div class="t-checkout-payment__step-navigation">
		{% include '@m-step-navigation' with { data: data } %}
	</div>

	<div class="t-checkout-payment__wrap">

		<form class="t-checkout-payment__form">

			<h3 class="t-checkout-payment__title">{{ data.myMethods.title }}</h3>

			<div class="t-checkout-payment__methods">
				{% include '@m-form-field-radio' with {
					data: data.myMethods,
					modifier: 'boxed'
				} %}
			</div>

			<h3 class="t-checkout-payment__title">{{ data.newMethods.title }}</h3>

			<div class="t-checkout-payment__methods">
				{% include '@m-form-field-radio' with {
					data: data.newMethods,
					modifier: 'boxed'
				} %}
			</div>

			<h3 class="t-checkout-payment__title">{{ data.billingMethod.title }}</h3>

			<div class="t-checkout-payment__methods">
				{% include '@m-form-field-radio' with {
					data: data.billingMethod,
					modifier: 'boxed'
				} %}
			</div>

			<div class="t-checkout-payment__row t-checkout-payment__buttons-wrap">
				<div class="t-checkout-payment__button-wrap">
					<button class="t-checkout-payment__button t-checkout-payment__button-back">
						{% include '@a-svg-icon' with {
							modifiers: ['stroked', 'small'],
							data: {
								name: 'arrow-left'
							}
						} %}
						<span class="t-checkout-payment__button-text">{{ data.buttons.back }}</span>
					</button>
				</div>
				<div class="t-checkout-payment__button-wrap">
					<button class="t-checkout-payment__button t-checkout-payment__button-cta">
						<span class="t-checkout-payment__button-text">{{ data.buttons.next }}</span>
						{% include '@a-svg-icon' with {
							modifiers: ['stroked', 'small'],
							data: {
								name: 'arrow-right'
							}
						} %}
					</button>
				</div>
			</div>
		</form>

	</div>

</div>
