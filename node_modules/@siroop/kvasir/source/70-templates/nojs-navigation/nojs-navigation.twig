<div class="t-nojs-navigation {% if modifier %} t-nojs-navigation--{{ modifier }}{% endif %}" data-c-name="NojsNavigation">
	<div class="t-nojs-navigation__wrapper">
		<ul class="t-nojs-navigation__main-list">
			{% for item in data.items %}
				{% if item %}
					<li class="t-nojs-navigation__main-list--item">
						<span class="t-nojs-navigation__main-list--item-title">{{ item.title }}</span>
						<!-- categories -->
						{% if item %}
							<ul class="t-nojs-navigation__categories">
								{% for subItem in item.items %}
									<li class="t-nojs-navigation__categories--item">
										<span class="t-nojs-navigation__categories--item-title">
											{{ subItem.title  }}
										</span>
										<!-- sub categories -->
										{% if subItem %}
											<ul class="t-nojs-navigation__sub">
												<li class="t-nojs-navigation__sub--overview">
													<a class="t-nojs-navigation__sub--overview-link" href="{{ subItem.url }}">
														{{ data.overviewLinkText  }}
													</a>
												</li>
												{% for subItem3 in subItem.items %}
													<li class="t-nojs-navigation__sub--item">
														<a class="t-nojs-navigation__sub--item-link" href="{{ subItem3.url }}">{{ subItem3.title  }}</a>
													</li>
												{% endfor %}
											</ul>
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>
</div>
