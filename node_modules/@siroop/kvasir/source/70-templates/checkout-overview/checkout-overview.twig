<div class="t-checkout-overview{% if modifier %} t-checkout-overview--{{ modifier }}{% endif %}" data-c-name="CheckoutOverview">

	<div class="t-checkout-overview__step-navigation">
		{% include '@m-step-navigation' with { data: data } %}
	</div>

	<div class="t-checkout-overview__wrap">
		<div class="t-checkout-overview__row">
			<div class="t-checkout-overview__col">
				<h2 class="t-checkout-overview__title">{{ data.headlines.billingAddress }}</h2>
				<div class="t-checkout-overview__text">
					{{ data.personalData.firstname.value }} {{ data.personalData.lastname.value }}<br />
					{{ data.personalData.street.value }} {{ data.personalData.streetNumber.value }}<br />
					{{ data.personalData.zip.value }} {{ data.personalData.city.value }}
				</div>
			</div>
			<div class="t-checkout-overview__col">
				<h2 class="t-checkout-overview__title">{{ data.headlines.deliveryAddress }}</h2>
				<div class="t-checkout-overview__text">
					{{ data.personalData.title.value }} {{ data.personalData.firstname.value }} {{ data.personalData.lastname.value }}<br />
					{{ data.personalData.street.value }} {{ data.personalData.streetNumber.value }}<br />
					{{ data.personalData.zip.value }} {{ data.personalData.city.value }}
				</div>
			</div>
		</div>

		<div class="t-checkout-overview__row">
			<div class="t-checkout-overview__col">
				<h2 class="t-checkout-overview__title">{{ data.headlines.personalData }}</h2>
				<div class="t-checkout-overview__text">
					{{ data.personalData.birthday.name }}: {{ data.personalData.birthday.value }}
				</div>
			</div>
			<div class="t-checkout-overview__col">
				<h2 class="t-checkout-overview__title">{{ data.headlines.contactInformation }}</h2>
				<div class="t-checkout-overview__text">
					{{ data.personalData.email.name }}: {{ data.personalData.email.value }}
				</div>
			</div>
		</div>

		<div class="t-checkout-overview__row">
			<div class="t-checkout-overview__col">
				<h2 class="t-checkout-overview__title">{{ data.headlines.paymentMethod }}</h2>
				<div class="t-checkout-overview__text">
					{{ data.personalData.creditcard.type }} {{ data.personalData.creditcard.number.name }}: {{ data.personalData.creditcard.number.value }}<br />
					{{ data.personalData.creditcard.valid.name }}: {{ data.personalData.creditcard.valid.value }}
				</div>
			</div>
		</div>

		<div class="t-checkout-overview__order-overview">
			<h2 class="t-checkout-overview__title">{{ data.headlines.orderOverview }}</h2>

			{% include '@o-cart-product-list' with { data: data.products, modifier: 'read-only' } %}
			{% include '@o-cart-total' with { data: data.cartTotal } %}
		</div>

		<div class="t-checkout-overview__checkbox-wrap">

			<div class="t-checkout-overview__agb">
				<span class="t-checkout-overview__circle-check">
					{% include '@a-svg-icon' with {
						modifiers: ['stroked', 'medium'],
						data: {
							name: 'circle-check'
						}
					} %}
				</span>
				<span>{{ data.agb.text | raw }}</span>
			</div>

			<div class="t-checkout-overview__age">
				<span class="t-checkout-overview__circle-check">
				{% include '@a-svg-icon' with {
					modifiers: ['stroked', 'medium'],
					data: {
						name: 'circle-check'
					}
				} %}
				</span>
				<span>{{ data.age.text | raw }}</span>
			</div>

			<div class="t-checkout-overview__newsletter">

				<div class="m-form-field-checkbox">
					<input class="m-form-field-checkbox__input" id="checkbox-01" type="checkbox" name="checkbox">
					<label class="m-form-field-checkbox__label" for="checkbox-01">
						<span class="m-form-field-checkbox__icon m-form-field-checkbox__icon-checked">
							{% include '@a-svg-icon' with {
								data: {
									name: 'checkbox-checked'
								},
								modifiers: ['medium', 'stroked-thin']
							} %}
						</span>
						<span class="m-form-field-checkbox__icon m-form-field-checkbox__icon-unchecked">
							{% include '@a-svg-icon' with {
							data: {
								name: 'checkbox-unchecked'
								},
								modifiers: ['medium', 'stroked-thin']
							} %}
						</span>
						<span class="m-form-field-checkbox__label-text">{{ data.newsletter.text | raw }}</span>
					</label>
				</div>

			</div>

		</div>

		<div class="t-checkout-overview__buttons-wrap">
			<div class="t-checkout-overview__button-wrap">
				<button class="t-checkout-overview__button t-checkout-overview__button-back">
					{% include '@a-svg-icon' with {
						modifiers: ['stroked', 'small'],
						data: {
							name: 'arrow-left'
						}
					} %}
					<span class="t-checkout-overview__button-text">{{ data.buttons.back }}</span>
				</button>
			</div>
			<div class="t-checkout-overview__button-wrap">
				<button class="t-checkout-overview__button t-checkout-overview__button-cta">{{ data.buttons.next }}</button>
			</div>
		</div>
	</div>

</div>
