<div class="t-search-results{% if modifier %} t-search-results--{{ modifier }}{% endif %}" data-c-name="SearchResults">

	<div class="t-search-results__body">

		<h1 class="t-search-results__title">{{ search.termLabel }} <b class="t-search-results__term">{{ search.term }}</b></h1>

		<div class="t-search-results__row">

			<div class="t-search-results__filters">

				<div class="t-search-results__category-panel">

					<button class="t-search-results__category-button">{{ panelCategories.name }}</button>

					{% include '@o-filter-panel' with { data: panelCategories, modifier: 'scroll' } %}

				</div>

				<div class="t-search-results__filter-panel">

					<button class="t-search-results__filter-button">{{ filtersLabel }}</button>

					{% include '@o-filter-panel' with { data: panelFilters } %}

				</div>

			</div>

			<div class="t-search-results__results">
				{% include '@o-list-header' with { data: search.results.listHeader } %}
				<div class="t-search-results__product-list">
					{% include '@o-list' with { modifier: 'vertical', data: search.results } %}
				</div>
				{% include '@o-list-footer' with { data: search.results.listFooter } %}
			</div>

		</div>
	</div>
</div>
