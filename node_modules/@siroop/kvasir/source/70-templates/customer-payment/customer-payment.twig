<div class="t-customer-payment" data-c-name="customer-payment">

	<div class="t-customer-payment__breadcrumb">
		{% include "@m-breadcrumb" with { data: { items: data.breadcrumb } } %}
	</div>

	<div class="t-customer-payment__body">

		<h1 class="t-customer-payment__title">{{ data.title }}</h1>

		<div class="t-customer-payment__row">

			<div class="t-customer-payment__navigation">
				<div class="t-customer-payment__navigation-panel">
					{% include "@m-list-navigation" with { data: data.navigation } %}
				</div>
			</div>

			<div class="t-customer-payment__content">

				<ul class="t-customer-payment__items">

					{% for item in data.payment.items %}

						<li class="t-customer-payment__item">

							<div class="t-customer-payment__name">{{ item.title }}</div>

							<div class="t-customer-payment__svg">
								{% include '@a-svg-icon' with {
									data: { name: item.method.icon },
								} %}
							</div>

							<div class="t-customer-payment__alt-text">{{ item.method.text | raw }}</div>

							<a href="#" class="t-customer-payment__remove-button">
								<span class="t-customer-payment__remove-icon">
									{% include '@a-svg-icon' with {
										data: { name: 'trash' },
										modifiers: ['small', 'stroked']
									} %}
									{{ item.labelDelete }}
								</span>
							</a>

						</li>

					{% endfor %}

				</ul>

			</div>

		</div>

	</div>

</div>
