<div class="t-customer-address" data-c-name="customer-address">

	<div class="t-customer-address__breadcrumb">
		{% include "@m-breadcrumb" with { data: { items: data.breadcrumb } } %}
	</div>

	<div class="t-customer-address__body">

		<h1 class="t-customer-address__title">{{ data.title }}</h1>

		<div class="t-customer-address__row">

			<div class="t-customer-address__navigation">

				<div class="t-customer-address__navigation-panel">
					{% include "@m-list-navigation" with { data: data.navigation } %}
				</div>

			</div>

			<div class="t-customer-address__content">


				<div class="t-customer-address__address">
					<h2 class="t-customer-address__list-header">{{ data.billingAddress.title }}</h2>

					<ul class="t-customer-address__list">
						{% for item in data.billingAddress.items %}
							<li class="t-customer-address__list-item">
								<span class="t-customer-address__list-value">{{ item.value }}</span>
							</li>
						{% endfor %}
					</ul>
				</div>

				<div class="t-customer-address__address">
					<h2 class="t-customer-address__list-header">{{ data.shippingAddress.title }}</h2>

					<ul class="t-customer-address__list">
						{% for item in data.shippingAddress.items %}
							<li class="t-customer-address__list-item">
								<span class="t-customer-address__list-value">{{ item.value }}</span>
							</li>
						{% endfor %}
					</ul>
				</div>

			</div>

		</div>

	</div>

</div>
