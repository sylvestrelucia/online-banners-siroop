<div class="t-customer" data-c-name="Customer">

	<div class="t-customer__breadcrumb">
		{% include "@m-breadcrumb" with { data: { items: data.breadcrumb } } %}
	</div>

	<div class="t-customer__body">

		<h1 class="t-customer__title">{{ data.title }}</h1>

		<div class="t-customer__row">

			<div class="t-customer__navigation">

				<div class="t-customer__navigation-panel">
					{% include "@m-list-navigation" with { data: data.navigation } %}
				</div>

			</div>

			<div class="t-customer__content">

				<ul class="t-customer__list">
					{% for customer in data.customer %}
						<li class="t-customer__list-item">
							<span class="t-customer__list-key">{{ customer.label }}</span>
							<span class="t-customer__list-value">{{ customer.value }}</span>
						</li>
					{% endfor %}
				</ul>

			</div>

		</div>

	</div>

</div>
