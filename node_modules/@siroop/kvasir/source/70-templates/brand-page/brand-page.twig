<div class="t-brand-page" data-c-name="BrandPage">
	<div class="t-brand-page__wrap">
		<div class="t-brand-page__breadcrumb">
			{% include '@m-breadcrumb' with {data: data.breadcrumb} %}
		</div>
	</div>
	<div class="t-brand-page__heading">
		{% if data.brand.headerImage %}
			{% include '@o-page-heading' with {data: data.brand, modifier: 'inline'} %}
		{% else %}
			{% include '@o-page-heading' with {data: data.brand, modifier: 'without-heading-banner'} %}
		{% endif %}
	</div>
	<div class="t-brand-page__teasers">
		{% include '@o-teaser-list' with { data: data.teasers } %}
		{% include '@m-button-show-more-items' with { data: data.showMoreButton } %}
	</div>
	<div class="t-brand-page__wrap">
		<div class="t-brand-page__product-list t-brand-page__product-list--promote">
			{% include '@o-list' with {data: data.productList, modifier: 'grid'} %}
		</div>
	</div>

	<div class="t-brand-page__body">
		<div class="t-brand-page__body-heading">
			<span class="t-brand-page__body-title">{{ data.brand.name }}</span>
			<span class="t-brand-page__body-subtitle">{{ data.brand.slogan }}</span>
		</div>
		{{ data.body|raw }}

		<div class="t-brand-page__video">
			{% include '@m-video-player' with {data: data.video} %}
		</div>

		<div class="t-brand-page__gallery">
			{% include '@o-gallery' with { data: data.gallery } %}
		</div>
	</div>
</div>
