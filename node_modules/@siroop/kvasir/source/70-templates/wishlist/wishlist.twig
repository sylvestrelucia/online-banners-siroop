<div class="t-wishlist{% if modifier %} t-wishlist--{{ modifier }}{% endif %}" data-c-name="Wishlist">
	<div class="t-wishlist__header">
		<div class="t-wishlist__heading t-wishlist__header-content">
			<h1 class="t-wishlist__title">{{ data.title }}</h1>
			<p class="t-wishlist__subtitle">{{ data.subTitle }}</p>
		</div>
	</div>


	{% if data.products|length > 1 %}
		<aside class="t-wishlist__sidebar">
			<div class="t-wishlist__content t-wishlist__sidebar-content">
				{% include '@o-wishlist-list' with {
					data: data.products
				} %}
			</div>

			<div class="t-wishlist__aside t-wishlist__sidebar-sidebar">
				<button class="t-wishlist__button">
					{{ data.addAlltoCart }}
				</button>
				<button class="t-wishlist__button t-wishlist__button--bordered">
					{{ data.clearWishlist }}
				</button>	
			</div>
		</aside>
	{% else %}
		<div class="t-wishlist__empty">
		{% include '@a-svg-icon' with {
			modifiers: ['filled', 'x-large'], data: { name: 'heart-list' }
		} %}
		</div>
	{% endif %}
</div>
