<div class="t-cart{% if modifier %} t-cart--{{ modifier }}{% endif %}" data-c-name="Cart">

	<div class="t-cart__header">
		<div class="t-cart__heading t-cart__header-content">
			<h1 class="t-cart__title">{{ data.title }}</h1>
			<p class="t-cart__subtitle">{{ data.subTitle }}</p>
		</div>

		<div class="t-cart__cart-mini t-cart__header-sidebar">
			{% include '@o-cart-aside--mini' with { data: data.cartAside} %}
		</div>
	</div>

	<aside class="t-cart__sidebar">

		<div class="t-cart__content t-cart__sidebar-content">
			{% include '@o-cart-product-list' with {
				data: data.products
			} %}
			{% include '@o-cart-total' with { data: data.cartTotal } %}
			{% include '@m-voucher-box' with { data: data.voucher } %}
		</div>

		<div class="t-cart__aside t-cart__sidebar-sidebar">
			{% include '@o-cart-aside' with { data: data.cartAside } %}
		</div>
	</aside>

</div>
