<div class="t-category-l2" data-c-name="CategoryL2">

	<div class="t-category-l2__breadcrumb">
		{% include "@m-breadcrumb" with { data: { items: data.breadcrumb } } %}
	</div>

	<div class="t-category-l2__body">

		<h1 class="t-category-l2__title">{{ data.title }}</h1>

		<div class="t-category-l2__row">

			<div class="t-category-l2__filters">
				<div class="t-category-l2__categories-title">
					{{ data.categoriesTitle }}
				</div>
				<div class="t-category-l2__categories">
					{% include '@o-link-list' with {
						modifier: data.modifier,
						data: {
							items: data.categories
						}
					} %}
				</div>
			</div>

			<div class="t-category-l2__results">
				<div class="t-category-l2__results-title">
					{{ data.productsTitle }}
				</div>
				<div class="t-category-l2__results-container">
					{% include '@o-list' with { modifier: 'grid', data: data.listProducts } %}
				</div>
			</div>

		</div>

	</div>
</div>
