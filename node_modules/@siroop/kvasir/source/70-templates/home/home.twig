<div class="t-home" data-c-name="Home">

	<h1 class="t-home__title">{{ data.pageTitle }}</h1>

	<div class="t-home__banner">
		{% include '@o-banner' with { data: data.banner } %}
	</div>

	<div class="t-home__category-list">
		<h3 class="t-home__subtitle">{{ data.categoryListIntro }}</h3>
		{% include '@o-category-list' with {data: data.categoryList} %}
	</div>

	<div class="t-home__teaser-list">
		{% include '@o-teaser-list' with { data: data.teaserList } %}
	</div>

	<div class="t-home__product-list">
		<h3 class="t-home__subtitle">{{ data.productsListIntro }}</h3>
		{% include '@o-list' with { data: data.productList, modifier: 'grid' } %}
	</div>
</div>
