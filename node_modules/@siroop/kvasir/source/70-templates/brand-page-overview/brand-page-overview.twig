<div class="t-brand-page-overview" data-c-name="BrandPage">
	<div class="t-brand-page-overview__wrap">
		<div class="t-brand-page-overview__breadcrumb">
			{% include '@m-breadcrumb' with {data: data.breadcrumb} %}
		</div>
	</div>

	<div class="t-brand-page-overview__head">
		<h1 class="t-brand-page-overview__title">{{ data.title }}</h1>
	</div>

	<div class="t-brand-page-overview__topbrands">
		<h2 class="t-brand-page-overview__title-sub">{{ data.topBrands.title }}</h2>
		<div class="t-brand-page-overview__topbrands-list">
			{% for brand in data.topBrands.items %}
				<a class="t-brand-page-overview__topbrands-brand" href="{{ brand.url }}">
					<div class="t-brand-page-overview__topbrands-brand-wrap">
						<img class="t-brand-page-overview__topbrands-brand-image" src="{{ brand.logo }}" alt="{{ brand.name }}"/>
					</div>
				</a>
			{% endfor %}
		</div>
	</div>

	<div class="t-brand-page-overview__alphabet">
		<h2 class="t-brand-page-overview__title-sub">{{ data.alphabet.title }}</h2>
		<div class="t-brand-page-overview__alphabet-list">
			{% for letter in data.alphabet.items %}
				<div class="t-brand-page-overview__alphabet-letter-box">
					<a class="t-brand-page-overview__alphabet-letter" href="{{ letter.url }}">{{ letter.text }}</a>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="t-brand-page-overview__brands">
		<h2 class="t-brand-page-overview__title-sub">{{ data.brands.title }}</h2>
		<div class="t-brand-page-overview__brands-list">
			{% for letter in data.brands.items %}
				<div class="t-brand-page-overview__brands-list-letter">
					<h3 id="{{ letter.letter }}" class="t-brand-page-overview__title-letter">{{ letter.letter }}</h3>
					<div class="t-brand-page-overview__brands-items">
						{% for brand in letter.items %}
							<a class="t-brand-page-overview__brands-link"
							   href="{{ brand.url }}">{{ brand.name | raw }}</a>
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
