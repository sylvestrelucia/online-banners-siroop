<div class="b-prospective {% if modifier %} b-prospective--{{ modifier }}{% endif %}">
	<div class="b-prospective__wrapper">
		<div class="b-prospective__branding">
			<svg class="b-prospective__branding-border" viewBox="0 0 100 100" preserveAspectRatio="none">
				<polygon points="0,100 100,100 100,0" />
			</svg>
			<div class="b-prospective__branding-logo">
				<div class="b-prospective__logo">

					{% include '@a-svg-icon' with {
					data: {
					name: 'logo'
					},
					modifiers: ['filled']
					} %}

				</div>
			</div>
		</div>
		<div class="slider js_slider">
			<div class="frame js_frame">

				<ul class="slides js_slides">

					{% for item in data.products %}

					<li class="b-prospective__slide b-prospective__slide--{{ data.axis }} js_slide">
						<a class="b-prospective__link" href="#">
							<div class="b-prospective__product-image">
								<img src="{{ item.image.small|raw }}" srcset="{{ item.image.small|raw }} 1x, {{ item.image.medium|raw }} 2x">
							</div>
							<div class="b-prospective__product-desc">{{ item.title|raw }}</div>
							<div class="b-prospective__product-price">
								{% include "@m-price" with { modifier: 'striked',
									data: {
										priceCurrency: item.price.striked.priceCurrency,
										priceValue: item.price.striked.priceValue,
									}
									} %}
								{% include "@m-price" with { modifier: 'reduced',
									data: {
										priceCurrency: item.price.reduced.priceCurrency,
										priceValue: item.price.reduced.priceValue,
									}
								} %}
							</div>

							<div class="b-prospective__product-cta">

								<button class="a-button-cta a-button-cta--cleared">
									{{ item.cta.text }}<div class="a-button-cta__icon">

										{% include '@a-svg-icon' with {
											data: {
												name: 'arrow-right'
											},
											modifiers: ['stroked', 'top']
										} %}

									</div>
								</button>
							</div>
						</a>
					</li>
					{% endfor %}
				</ul>

				<div class="js-slide-nav js-slide-nav--prev">
					<span class="js_prev prev">
						{% include '@a-svg-icon' with {
						data: {
							name: 'arrow-left'
							},
						modifiers: ['stroked', 'top']
						} %}
					</span>
				</div>

				<div class="js-slide-nav js-slide-nav--next">
					<span class="js_next next">
						{% include '@a-svg-icon' with {
							data: {
								name: 'arrow-right'
							},
							modifiers: ['stroked', 'top']
						} %}
					</span>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.5.0/min/tiny-slider.js"></script>
<script>
	var slider = tns({
		container: '.js_slides',
		items: {{ data.slides }},
		slideBy: 1,
		autoplay: false,
		controls: false,
		autoplayHoverPause: true,
		autoplayButtonOutput: false,
		autoplayText: '',
		autoplayTimeout: '3000',
		touch: true,
		mouseDrag: false,
		nav: false,
		lazyload: true,
		axis: '{{ data.axis }}',
	});

	document.querySelector('.js_prev').onclick = function () {
		slider.goTo('prev');
	};

	document.querySelector('.js_next').onclick = function () {
		slider.goTo('next');
	};
</script>
