<a href="javascript:window.open(window.clickTag)">
<div class="b-product-deal {% if modifier %} b-product-deal--{{ modifier }}{% endif %}">
	<div class="b-product-deal__wrapper">
		<div class="b-product-deal__badge">{% include "@a-svg-badge--percent-20" %}</div>
		<div class="b-product-deal__product-wrapper">
			<div class="b-product-deal_title-wrapper">
				<div class="b-product-deal__product-brand">{{ data.brand }}</div>
				<div class="b-product-deal__product-desc">{{ data.desc }}</div>
			</div>
			<div class="b-product-deal__product-price">

				{% include "@m-price" with { modifier: 'striked',
					data: {
						priceCurrency: data.product.price.striked.priceCurrency,
						priceValue: data.product.price.striked.priceValue,
					}
				} %}

				{% include "@m-price" with { modifier: 'reduced',
					data: {
						priceCurrency: data.product.price.reduced.priceCurrency,
						priceValue: data.product.price.reduced.priceValue,
					}
				} %}

			</div>
			<div class="b-product-deal__product-cta">
				<button class="a-button-cta">
					{{ data.cta.text }}
					<div class="a-button-cta__icon">

						{% include '@a-svg-icon' with {
							data: {
								name: 'arrow-right'
							},
							modifiers: ['stroked', 'top']
						} %}

					</div>
				</button>
			</div>
		</div>
		<div class="b-product-deal__product-image">
			<img src="{{ data.product.image.small }}" srcset="{{ data.product.image.small }} 1x, {{ data.product.image.medium }} 2x">
		</div>
		<div class="b-product-deal__branding">
			<svg class="b-product-deal__branding-border" viewBox="0 0 100 100" preserveAspectRatio="none">
				<polygon points="0,100 100,100 100,0" />
			</svg>

			<div class="b-product-deal__branding-logo">
				<div class="b-product-deal__logo">

					{% include '@a-svg-icon' with {
						data: {
							name: 'logo'
						},
						modifiers: ['filled']
					} %}

				</div>
			</div>
		</div>
		<div class="b-product-deal__branding-legal">{{ data.legal.first }}</div>
	</div>
</div>
</a>
