<a href="javascript:window.open(window.clickTag)">
<div class="b-merchant-deal {% if modifier %} b-merchant-deal--{{ modifier }}{% endif %}">
	<div class="b-merchant-deal__wrapper">
		<div class="b-merchant-deal__badge">

			{% include "@a-svg-badge--percent-20" %}

		</div>
		<div class="b-merchant-deal__product-image">
			<img src="{{ data.product.image.small }}" srcset="{{ data.product.image.small }} 1x, {{ data.product.image.medium }} 2x">
		</div>
		<div class="b-merchant-deal__product-wrapper">
			<div class="b-merchant-deal__product-desc">{{ data.desc }}</div>
			<div class="b-merchant-deal__product-brand">{{ data.brand }}</div>
			<div class="b-merchant-deal__product-cta">
				<button class="a-button-cta">
					{{ data.cta.text }}
					<div class="a-button-cta__icon">

						{% include '@a-svg-icon' with {
							data: {
								name: 'arrow-right'
							},
							modifiers: ['stroked', 'top']
						} %}

					</div>
				</button>
			</div>
		</div>
		<div class="b-merchant-deal__branding">
			<svg class="b-merchant-deal__branding-border" viewBox="0 0 100 100" preserveAspectRatio="none">
				<polygon points="0,100 100,100 100,0" />
				/>
			</svg>
			<div class="b-merchant-deal__branding-logo">
				<div class="b-merchant-deal__logo">

					{% include '@a-svg-icon' with {
						data: {
							name: 'logo'
						},
						modifiers: ['filled']
					} %}

				</div>
			</div>
		</div>
		<div class="b-merchant-deal__branding-legal">{{ data.legal.first }} <br />{{ data.legal.second }}</div>
	</div>
</div>
</a>
