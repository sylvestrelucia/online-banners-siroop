<div class="mat-icons">
	<div class="mat-icons__sizes">
		<div class="mat-icons__size">
			{% for name in data.icons %}
				<div class="mat-icons__color">
					{% for size in data.sizes %}
						<div class="mat-icons__icon">
							<div class="mat-icons__icon-element">
								{% set modifiersClasses = '' %}
								{% set modifiersClasses = modifiersClasses ~ ' mat-icon--' ~ size %}
								{% set modifiersClasses = modifiersClasses ~ ' mat-icon--' ~ modifier %}
								<svg class="mat-icon{% if modifiersClasses %}{{ modifiersClasses }}{% endif %}">
									<use xlink:href="#{{ name }}"></use>
								</svg>
							</div>
							<div class="mat-icons__code">
								<pre><code>@include '@a-svg-icon' with {
	data: { name: {{ name }} },
	modifiers: [{{ modifier }}, {{ size }}],
}</code></pre>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
