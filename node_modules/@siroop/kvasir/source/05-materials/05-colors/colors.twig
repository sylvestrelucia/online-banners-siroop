<div class="mat-colors" data-c-name="MatColors">

	{% macro styleguideColor(color, hue) %}
		<div class="mat-colors__swatch-wrapper sg-swatch__wrapper js-sg-swatch">
			<div class="mat-colors__clipboard js-clipboard">Copied to Clipboard</div>
			<div class="mat-colors__swatch js-sg-swatch-color bg-color--{{ color }}{% if hue|default %}-{{ hue }}{% endif %}"></div>
			<h2 class="mat-colors__color-title">
				{{ color }}{% if hue|default %}-{{ hue }}{% endif %}
			</h2>
			<a href="#" class='mat-colors__title-rgb sg-swatch-value sg-swatch-value__rgb js-sg-swatch-value__rgb js-copy-color'>RGB</a>
			<a href="#" class='mat-colors__swatch-title-sub sg-swatch-value sg-swatch-value__hex js-sg-swatch-value__hex js-copy-color'>HEX</a>
		</div>
	{% endmacro %}

	<div class="mat-colors__block">
		{% for color in colors %}
			{{ _self.styleguideColor(color) }}
			{% if isHue %}
				{% for hue in hues %}
					{{ _self.styleguideColor(color, hue) }}
				{% endfor %}
			{% endif %}
		{% endfor %}
	</div>
</div>
