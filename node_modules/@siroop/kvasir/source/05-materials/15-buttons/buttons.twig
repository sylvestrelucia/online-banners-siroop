<div class="mat-buttons">
	<div class="mat-buttons__sizes">
		<div class="mat-buttons__size">
			<h2 class="mat-buttons__size-title">{{ label }}</h2>
			{% for color in data.colors %}
				<div class="mat-buttons__color">
					{% for size in data.sizes %}
						<div class="mat-buttons__button">
							<div class="mat-buttons__button-element">
								<button class="a-button{% if modifier %} a-button--{{ size }} a-button--{{ modifier }}-{{ color }}{% endif %}">
									{{ data.text }}
								</button>
								<button disabled class="a-button{% if modifier %} a-button--{{ size }} a-button--{{ modifier }}-{{ color }}{% endif %}">
									{{ data.text }}
								</button>
							</div>
							<div class="mat-buttons__code">
								<code>
									@include button();<br />
									@include button({{ size }});<br />
									@include button({{ modifier }}, {{ color }});
								</code>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
