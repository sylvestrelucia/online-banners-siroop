<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="robots" content="noindex, nofollow">

	<link rel="icon" href="/assets/img/icon/favicon.ico">
	<link rel="apple-touch-icon" href="/assets/img/icon/favicon-32x32.png"/>

	<title>{{ pageTitle }}</title>

	<script>
		(function () {
			sessionStorage.fonts === 'true' ? document.documentElement.classList.add('wf-active') : ''
		})();
	</script>

	<link href="/css/kvasir-atoms.css" rel="stylesheet">
	<link href="/css/kvasir-components.css" rel="stylesheet">
	<link href="/css/kvasir-templates.css" rel="stylesheet">
</head>
<body>

<div hidden>
	{% include '@a-svg-sprite' %}
	{% include '@a-svg-sprite--payment' %}
	{% include '@a-svg-sprite--shipment' %}
</div>

{% include '@m-badge-internal' %}

{% include '@o-header' with {
	data: data.header,
} %}

<div class="page-template js-page-template">
	{% if data.showNotification %}
		{% include '@o-notification' with {
			modifier: 'promotion js-notification--no-animation',
			data: {
				text: '-20% Black Friday Gutschein aktivieren',
				url: '/landing-page-url'
			}
		} %}
	{% endif %}

	{% include '@o-notification' with {
		modifier: data.notification.modifier,
		data: data.notification
	} %}

	{{ yield | raw }}
</div>
<footer class="page-footer js-page-footer">
	{% include '@m-usp-banner' with { modifier: 'large', data: data.uspBannerFooter } %}
	{% include '@o-footer' with { data: data.footer } %}
	{% include '@o-footer-meta' with { data: data.footerMeta } %}
</footer>
<script>
	var WebFontConfig = {
		classes: false,
		active: function () {
			sessionStorage.fonts = true;
		},
		google: {
			families: [
				'Roboto:100,300,400,400i,500,700',
				'Roboto+Condensed:300,400',
				'Mate:400i',
				'Yrsa:400',
			]
		}
	};

	(function (d) {
		var wf = d.createElement('script'), s = d.scripts[0];
		wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js';
		wf.async = true;
		s.parentNode.insertBefore(wf, s);
	})(document);
</script>

<script src="/js/default.js"></script>

</body>
</html>
