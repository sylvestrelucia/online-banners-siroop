# -----------------------------------------------------------------------------
# Webpack
# -----------------------------------------------------------------------------

# Mode
WEBPACK_MODE=development

# Babili minifier
WEBPACK_BABILI_PLUGIN=false

# Devtool (eval-source-map for test/dev or cheap-module-source-map for prod)
WEBPACK_DEVTOOL=eval-source-map

# Sourcemap (tests)
WEBPACK_SOURCEMAP_DEVTOOL_PLUGIN=false

# Istanbul loeader (tests)
WEBPACK_ISTANBUL_INSTRUMENT_LOADER=false

# -----------------------------------------------------------------------------
# JS
# -----------------------------------------------------------------------------

# Minify JS
JS_MINIFY=false

# Lint fail on error
JS_LINT_FAIL_ON_ERROR=false

# -----------------------------------------------------------------------------
# CSS
# -----------------------------------------------------------------------------

# Lint fail on error
CSS_LINT_FAIL_ON_ERROR=false

# SCSS Sourcemaps
CSS_SOURCEMAPS=true

# CSS minify
CSS_MINIFY=false

# Kasir prefix
CSS_KVASIR_PREFIX=false

# -----------------------------------------------------------------------------
# AWS (for deployment only)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
